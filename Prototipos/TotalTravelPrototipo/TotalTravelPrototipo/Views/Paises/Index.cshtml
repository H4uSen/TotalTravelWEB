
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white shadow-sm px-4 py-3 z-index-20">
    <div class="container-fluid px-0">
        <h2 class="mb-0 p-1">Países</h2>
    </div>
</div>

<br />

<div class="container">
    <div class="card">
        <div class="card-body">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Nuevo</button>
        </div>
    <div class="col-lg-12">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0 table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>País</th>
                                <th>Nacionalidad</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Honduras</td>
                                <td>Hondureño</td>
                                <td><button type="button" class="bx bx-detail btn btn-light" style="background-color: #FDB24C; color: white;"> Detalles</button> 
                                | <button type="button" class="bx bx-pencil btn btn-info"> Editar</button> 
                                | <button type="button" class="bx bx-trash btn btn-danger"> Eliminar</button></td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Mexico</td>
                                <td>Mexicano</td>
                                <td>
                                    <button type="button" class="bx bx-detail btn btn-light" style="background-color: #FDB24C; color: white;"> Detalles</button>
                                    | <button type="button" class="bx bx-pencil btn btn-info"> Editar</button>
                                    | <button type="button" class="bx bx-trash btn btn-danger"> Eliminar</button>
                                </td>
                            </tr>
                            <tr>
                                <th class="border-bottom-0" scope="row">3</th>
                                <td class="border-bottom-0">España</td>
                                <td class="border-bottom-0">Español</td>
                                <td>
                                    <button type="button" class="bx bx-detail btn btn-light" style="background-color: #FDB24C; color: white;"> Detalles</button>
                                    | <button type="button" class="bx bx-pencil btn btn-info"> Editar</button>
                                    | <button type="button" class="bx bx-trash btn btn-danger"> Eliminar</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">4</th>
                                <td>Canadá</td>
                                <td>Canadiense</td>
                                <td>
                                    <button type="button" class="bx bx-detail btn btn-light" style="background-color: #FDB24C; color: white;"> Detalles</button>
                                    | <button type="button" class="bx bx-pencil btn btn-info"> Editar</button>
                                    | <button type="button" class="bx bx-trash btn btn-danger"> Eliminar</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">5</th>
                                <td>Suiza</td>
                                <td>Suizo</td>
                                <td>
                                    <button type="button" class="bx bx-detail btn btn-light" style="background-color: #FDB24C; color: white;"> Detalles</button>
                                    | <button type="button" class="bx bx-pencil btn btn-info"> Editar</button>
                                    | <button type="button" class="bx bx-trash btn btn-danger"> Eliminar</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">AGREGAR PAÍS</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row text-dark">
                    <div class="col-md-4">
                        <div class="form-group">
                            <br />
                            <label class="control-label">Código <label class="text-danger">*</label></label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1"><i class='bx bx-map-alt bx-xl'></i></span>
                                <input type="text" class="form-control bg-white text-dark" maxlength="3" required>
                            </div>
                        </div>                        
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <br />
                            <label class="control-label">País <label class="text-danger">*</label></label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1"><i class='bx bx-world bx-xl'></i></span>
                                <input type="text" class="form-control bg-white text-dark" maxlength="50" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <br />
                            <label class="control-label">Nacionalidad <label class="text-danger">*</label></label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1"><i class='bx bx-id-card'></i></span>
                                <input type="text" class="form-control bg-white text-dark" maxlength="50" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>