@model AHM_TOTAL_TRAVEL_WEB.Models.PartnerTypeViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="user icon"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Editar
                    </div>
                    <p>Editar tipo de socio</p>
                </div>
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "PartnerType")">
                        Back
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>
            <form asp-action="Update">
                <div class="ui form attached fluid segment">
                    <div class="content">
                        <div class="three fields">
                            <div class="field" hidden>
                                <label>ID</label>
                                <input asp-for="TiPar_ID" />
                            </div>
                            <div class="field">
                                <label>Descripcion</label>
                                <input asp-for="TiPar_Descripcion" />
                            </div>
                            <div class="required field">
                                <label>Tipo de Rol</label>
                                <select id="Rol_ID" class="ui dropdown search" asp-items="ViewBag.Rol_ID" asp-for="Rol_ID">
                                    <option value="">Seleccione un tipo de Socio</option>
                                </select>
                                <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorPartner"></span>
                            </div>
                        </div>


                        <input type="submit" value="Editar" class="btn btn-primary ui positive button" />

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section HighlightTile{
    <script>
        $("#GeneralModule").addClass("active");
        $("#General_Schema").addClass("show");
        $("#GeneralModule").addClass("expandedList")
    </script>
}