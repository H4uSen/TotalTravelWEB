@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.TypesTransportListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="bus icon"></i>
            <div class="content">
                <div class="header">
                    Tipos de Transportes
                </div>

            </div>
        </div>

        <br>
        <div class="ui grid mb-3">
            <div class="eight wide column">
                <button id="createTypesTransport" class="ui small primary labeled icon btn-edit button"><i class="plus icon"></i>Nuevo</button>
            </div>

        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>
        <table id="grdTypeTransport" class="display ui compact selectable celled table" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        Socio
                    </th>
                    <th>
                        Transporte
                    </th>
                    <th width="300px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Partner_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trasporte)
                        </td>

                        <td>
                            <button class="ui large icon btn-edit button" id="UpdateBottom" onclick="editar(@item.ID)">
                                <i class="pencil alternate icon icon-crud"></i>
                            </button>
                            <button class="ui large icon negative button" onclick="Delete(@item.ID)">
                                <i class="trash alternate icon icon-crud"></i>
                            </button>
                            <a href="@Url.Action("Details","TypesTransport",new {id=item.ID})" class="ui large icon button"><i class="bi bi-info-circle fa-lg icon-crud"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br>

    </div>
</div>
<div class="ui modal longer" id="modalCreate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa un tipo de transporte
    </div>
    <form asp-action="Create" asp-controller="TypesTransport" id="createTypesTransportForm">
        <div class="ui form attached fluid segment">
            <div class="content">
                <div class="two fields">
                    <div class="required field">
                        <label class="ui label">Tipo de transporte</label>
                        <input id="Transporte" name="TiTr_Descripcion" placeholder="Descripcion del tipo de transporte" />
                    </div>
                    <div class="required field" id="Part_ID" hidden>
                        <label class="ui label">Tipo de socio</label>
                        <select id="Partner_ID" name="Partner_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                            <option value="">Seleccione un socio</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button btn-purple text-white" id="sendTypesTransport" onclick="validar()">Guardar</button>
        <button class="ui button" id="closeTypesTransport">Cancelar</button>
    </div>
</div>

<div class="ui modal longer" id="modalUpdate">
    <i class="close icon"></i>
    <div class="header">
        Actualiza tipo de transporte
    </div>
    <form asp-action="Update" asp-controller="TypesTransport" id="updateTypesTransportForm">
        <div class="ui form attached fluid segment">
            <div class="content">
                <input id="id" style="display:none" />
                <div class="two fields">
                    <div class="required field">
                        <label class="ui label">Tipo de transporte</label>
                        <input id="Transporte_up" name="TiTr_Descripcion" placeholder="Descripcion del tipo de transporte" />
                    </div>
                    <div class="required field" id="Part_ID2" hidden>
                        <label class="ui label">Tipo de socio</label>
                        <select id="Partner_ID2" name="Partner_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                            <option value="">Seleccione un socio</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button" id="closeTypesTransport">Cancelar</button>
        <button class="ui button btn-purple text-white" id="sendTypesTransport" onclick="actualizar()">Guardar</button>
    </div>
</div>



@section Scripts{
    <script src="~/js/TypesTransport/Create.js"></script>
    <script>
        const params = new URLSearchParams(window.location.search);
        const izziSuccess = params.get("success");

        if (izziSuccess == "true") {
            iziToastAlert(title = "Proceso completado", message = "La acción se ha completado exitosamente.", type = "success");
        }
        // ----------------------------------- EVENTS ------------------------------------

        $(document).ready(function () {

            var table = $("#grdTypeTransport").DataTable({
                stateSave: true,
                language: {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                },
                //Aqui se ingresa el numero de columnas que tiene la tabla
                columns: [
                    {},
                    {},
                    {}
                ],
                order: [[1, 'asc']],
                dom: 'Bfrtip',

                //Son los botones de acciones para exportar
                buttons: [
                    {
                        extend: 'pdfHtml5',
                        text: '<i class= "file pdf icon"></i> Exportar como PDF',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2",
                        exportOptions: {
                            columns: [0, 1, 2]
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="file excel icon"></i> Exportar a excel',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2",
                        exportOptions: {
                            columns: [0, 1, 2]
                        }
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="file csv icon"></i> Exportar como CSV',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2"
                    },
                ]
            });
        });


        //------------------------------------Funciones------------------------

        function Delete(id) {
            const capsula2 = () => {
                ajaxRequest("/TypesTransport/Delete?id=" + id, null, "POST")
                window.location.href = '/TypesTransport?success=true';
            };

            sweetAlertconfirm("Estas Seguro de Eliminar el Registro Seleccionado?", "Este registro se borrara permanentemente", "warning", capsula2);

        };
    </script>

}
@section HighlightTile{
    <script>
        highlightTile();
    </script>

}
