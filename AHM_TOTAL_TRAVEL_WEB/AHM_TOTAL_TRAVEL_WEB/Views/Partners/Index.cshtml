@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.PartnersListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="user icon"></i>
            <div class="content">
                <div class="header">
                    Socios
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid mb-3">
            <div class="eight wide column">
                <a class="ui small btn-edit text-white labeled icon button" href="@Url.Action("Create","Partners")">
                    <i class="user icon"></i> Nuevo
                </a>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>
        <table id="grdPartners" class="display ui compact selectable celled table" style="width:100%;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            Teléfono
                        </th>
                        <th>
                            Tipo de Socio
                        </th>
                        <th width="300px">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoPartner)
                            </td>

                            <td>
                                <a class="ui large icon btn-edit button" href="@Url.Action("Update","Partners", new { id=item.ID })">
                                    <i class="pencil alternate icon icon-crud"></i>
                                </a>
                                <button class="ui large icon btn-delete button" onclick="DeletePartners(@item.ID)">
                                    <i class="trash alternate icon icon-crud"></i>
                                </button>
                                <a class="ui large icon button" href="@Url.Action("Details","Partners", new { id=item.ID })">
                                    <i class="bi bi-info-circle fa-lg icon-crud"></i>
                                </a>

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
            <br>

    </div>
</div>
<br>

@section Scripts{
    <script>

        // ----------------------------------- EVENTS ------------------------------------

        $(document).ready(function () {

            var table = $("#grdPartners").DataTable({
                stateSave: true,
                language: {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                },
                //Aqui se ingresa el numero de columnas que tiene la tabla
                columns: [
                    {},
                    {},
                    {},
                    {},
                    {}
                ],
                order: [[1, 'asc']],
                dom: 'Bfrtip',

                //Son los botones de acciones para exportar
                buttons: [
                    {
                        extend: 'pdfHtml5',
                        text: '<i class= "file pdf icon"></i> Exportar como PDF',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2",
                        exportOptions: {
                            columns: [0, 1, 2, 3 ,4]
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="file excel icon"></i> Exportar a excel',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2",
                        exportOptions: {
                            columns: [0, 1, 2, 3 ,4]
                        }
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="file csv icon"></i> Exportar como CSV',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2"
                    },
                ]
            });
        });

    </script>
    <script>
        const params = new URLSearchParams(window.location.search);
        const izziSuccess = params.get("success");

        if (izziSuccess == "true") {
            iziToastAlert(title = "Proceso completado", message = "La acción se ha completado exitosamente.", type = "success");
        }

        function DeletePartners(id) {
            const capsula1 = () => {
                var response = ajaxRequest("Partners/Delete?id=" + id, null, "POST");

                window.location.href = '/Partners?success=true';

            };
            sweetAlertconfirm("¿Seguro de eliminar este registro?", "Este registro se borrará permanentemente.", "warning", capsula1);

        };
    </script>
}
@section HighlightTile{
    <script>

        $("#GeneralModule").addClass("active");
        $("#GeneralModule").addClass("expandedList");
        $("#GeneralModule").prop("aria-expanded");
        $("#GeneralModule").attr("aria-expanded", "true");

        $("#General_Schema").addClass("show");

        $("#PartnersTile").addClass("activeTile");
    </script>
}