<section class="forms">
    <div class="container-fluid">
        <h1 align="center">Datos cliente</h1>
        <div class="row">
            <!-- Basic Form-->
            <div class="col-lg-4">
                <br>
                <div class="card">
                    <div class="card-header">
                        <h3 class="h4 mb-0">Los datos de tu reserva</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <p class="text-sm">Entrada<br><b>mar, 6 sep 2022</b><br>12:00 - 17:00</p>
                            </div>
                            <div class="col-sm-6">
                                <p class="text-sm">Salida<br><b>mié, 7 sep 2022</b><br>A 13:00</p>
                            </div>
                            <hr>
                            <p class="text-sm">Duración de la estancia:<br><b>@Html.DisplayFor(model => model.Duracion_Paquete)</b></p>
                            <hr>
                            <p class="text-sm">Tu selección:<br><b>Paquete @Html.DisplayFor(model => model.Nombre)</b></p>
                            <p class="text-sm">Capacidad máxima<br><b>3 adultos</b></p>
                            <div>
                                <p class="text-md text-success"><img src="data:image/png;base64," /> ¡Esta opción encaja bien!</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="h4 mb-0">Desglose del precio</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-7">
                                <p class="text-sm">Habitación Doble<br>16% IVA</p>
                            </div>
                            <div class="col-sm-5">
                                <p class="text-sm" align="right">HNL @Html.DisplayFor(model => model.precio) <br> HNL 160.00</p>
                            </div>
                            <div class="col-sm-7">
                                <p class="text-md"><b>Subtotal:</b></p>
                            </div>
                            <div class="col-sm-5">
                                <p class="text-md" align="right"><b>HNL 1160.00</b></p>
                            </div>
                            <hr>
                            <div>
                                <p class="text-md text-danger"><img src="data:image/png;base64," /> No reembolsable</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <br>
                <div class="card">
                    <div class="card-header">
                        <h3 class="h4 mb-0">Ingresa los siguientes datos</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Nombre</label><label class="text-danger">*</label>
                                    <input class="form-control" type="text" required value="@ViewData["Nombre"]">
                                    <br>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Apellido</label><label class="text-danger">*</label>
                                    <input class="form-control" type="text" required value="@ViewData["Apellido"]">
                                    <br>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label class="form-label" for="exampleInputEmail1">E-mail</label><label class="text-danger">*</label>
                                <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" required value="@ViewData["Correo"]">
                                <div class="form-text" id="emailHelp">El correo de confirmación se enviará a esta dirección.</div>
                                <br>
                            </div>
                            <div class="mb-3">
                                <label class="form-check-label">¿Para quién es la reserva?</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Para mí
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                    <label class="form-check-label" for="flexRadioDefault1">
                                        Para otra persona
                                    </label>
                                </div>
                                <br>
                            </div>
                            <div align="center" class="d-grid gap-2 col-4 mx-auto">
                                <button class="btn btn-primary" type="submit">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



