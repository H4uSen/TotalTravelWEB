@model AHM_TOTAL_TRAVEL_WEB.Models.CountriesViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        .dotted_button {
            width: 100%;
            height: 6em;
            background: white;
            border: 3px solid #837c7c;
            border-style: dashed;
            font-size: 20px;
        }
    </style>
}

<div class="container card">
    <div class="ui basic segment">
        <div class="ui icon attached message">
            <i class="globe icon"></i>
            <div class="content">
                <div class="header text-capitalize">
                     Actualizar País
                </div>
            </div>
            <div class="right floated content" style="text-align: end;">
                <a class="ui left labeled icon button" href="@Url.Action("Index", "Countries")">
                    Regresar
                    <i class="left arrow icon"></i>
                </a>
            </div>
        </div><br />

        <!-- formulario-->
        <form asp-action="Update" asp-controller="Countries" id="createCountriesForm">
            <div class="ui form attached fluid">
                <div class="content">
                    <input id="Pais_ID"  asp-for="Pais_ID" hidden />
                    <div class="required field">
                        <div class="two fields">
                            <div class="required field">
                                <label class="ui label">País</label>
                                <input  value="@ViewData["Pais_D"]" id="Pais_Descripcion"  class="form-control" />

                            </div>
                            <div class="required field">
                                <label class="ui label">Código</label>
                                <input  value="@ViewData["Pais_Codigo"]" id="Pais_Codigo"  min="1" type="number" class="form-control" />

                            </div>
                        </div>
                        <div class="two fields">
                            <div class="required field">
                                <label class="ui label">Nacionalidad</label>
                                <input  value="@ViewData["Pais_Nacionalidad"]" id="Pais_Nacionalidad"  class="form-control" />

                            </div>
                            <div class="required field">
                                <label class="ui label">ISO</label>
                                <input  value="@ViewData["Pais_ISO"]" id="Pais_ISO" maxlength="2"  class="form-control" />

                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-edit ui positive button" href="javascript: ActualizarPais()">Guardar</a>
                <a class="ui large icon button" href="@Url.Action("Index", "Countries")">Cancelar</a>
            </div>
        </form>
        <!-- fin formulario-->

        <br />
        <h2 class="ui header">Ciudades</h2>
        <br />
        <div class="ui two columns stackabled grid">
            <div class="column overflow-auto" style="max-height:300px">
                <table class="ui compact selectable celled table" id="grdCiudades">
                    <thead style="visibility:collapse">
                        <tr>
                            <th>Ciudad</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="column">
                <button id="btnCrear" class="dotted_button">
                    <i class="plus icon"></i> Click para agregar una ciudad
                </button>
                <div class="ui form attached fluid segment">
                    <div class="content" id="form_content" data-action-target="">
                        <div class="required field">
                            <label>Nombre de la ciudad</label>
                            <input id="Ciudad" />
                        </div>
                        <br />
                        <a class="btn btn-edit ui positive button" href="#" id="btnGuardar">Guardar</a>
                        <a class="ui large icon button" id="btnCancelar">Cancelar</a>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <br />
    </div>
</div>

@section Scripts {
    <script>
        const Pais_ID = "@ViewData["Pais_ID"]";
        const params = new URLSearchParams(window.location.search);
        const izziSuccess = params.get("success");

        if (izziSuccess == "true") {
            iziToastAlert(title = "Proceso completado", message = "La acción se ha completado exitosamente.", type = "success");
        }
       
    </script>
    <script src="~/js/CountriesJS/Update.js"></script>
    <script src="~/js/CountriesJS/ValidacionesExtra.js"></script>
}