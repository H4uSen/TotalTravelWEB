@model AHM_TOTAL_TRAVEL_WEB.Models.CountriesListViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        .dotted_button {
            width: 100%;
            height: 6em;
            background: white;
            border: 3px solid #837c7c;
            border-style: dashed;
            font-size: 20px;
        }
    </style>
}

<div class="container card">
    <div class="ui basic segment">
        <div class="ui icon attached message">
            <i class="icon food"></i>
            <div class="content">
                <div class="header text-capitalize">
                    Actualizar Pais
                </div>
            </div>
            <div class="right floated content" style="text-align: end;">
                <a class="ui left labeled icon button" href="@Url.Action("Index", "Countries")">
                    Regresar
                    <i class="left arrow icon"></i>
                </a>
            </div>
        </div><br />

        <!-- formulario-->
        <form asp-action="Update" asp-controller="Countries" id="createCountriesForm">
            <div class="ui form attached fluid">
                <div class="content">
                    <input id="Pais_ID" name="Pais_ID" value="@Model.ID" hidden />
                    <div class="required field">
                        <div class="two fields">
                            <div class="required field">
                                <label>Nombre</label>
                                <input name="Pais_Descripcion" id="Pais_Descripcion" value="@Model.Pais" class="form-control" />

                            </div>
                            <div class="required field">
                                <label>Código</label>
                                <input name="Pais_Codigo" id="Pais_Codigo" value="@Model.Codigo" class="form-control" />

                            </div>
                        </div>
                        <div class="two fields">
                            <div class="required field">
                                <label>Nacionalidad</label>
                                <input name="Pais_Nacionalidad" id="Pais_Nacionalidad" value="@Model.Nacionalidad" class="form-control" />

                            </div>
                            <div class="required field">
                                <label>ISO</label>
                                <input name="Pais_ISO" id="Pais_ISO" value="@Model.ISO" class="form-control" />

                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-edit ui positive button" href="javascript: ActualizarPais()">Guardar</a>
                <a class="ui large icon button" href="@Url.Action("Index", "Countries")">Cancelar</a>
            </div>
        </form>
        <!-- fin formulario-->

        <br />
        <h2 class="ui header">Ciudades</h2>
        <br />
        <div class="ui two columns stackabled grid">
            <div class="column overflow-auto" style="max-height:300px">
                <table class="ui compact selectable celled table" id="grdCiudades">
                    <thead style="visibility:collapse">
                        <tr>
                            <th>Ciudad</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="column">
                <button id="btnCrear" class="dotted_button">
                    <i class="plus icon"></i> Click para agregar una ciudad
                </button>
                <div class="ui form attached fluid segment">
                    <div class="content" id="form_content" data-action-target="">
                        <div class="required field">
                            <label>Nombre de la ciudad</label>
                            <input id="Ciudad" />
                        </div>
                        <br />
                        <a class="btn btn-edit ui positive button" href="#" id="btnGuardar">Guardar</a>
                        <a class="ui large icon button" id="btnCancelar">Cancelar</a>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <br />
    </div>
</div>

@section Scripts {
    <script>
        const Pais_ID = "@ViewData["Pais_ID"]";
    </script>
    <script src="~/js/CountriesJS/Update.js"></script>
}