@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.HotelListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        #hotel_nav > .item {
            padding: 0;
        }

        .blue_text {
            color: #4183c4;
            text-decoration: none;
        }

        .header {
            text-decoration: none;
        }

        .label {
            text-decoration: none;
        }

        .ui.dropdown.selection {
            border-radius: 0;
        }
    </style>
}

<br/>
<br/>
<div class="container">
   
    <div class="ui stackable grid">

        <!-- reservation historial section -->
        <div class="five wide column">
            <div class="ui segment" id="asa">
                    <div class="ui grid" style="width:100%">
                        
                            <select id="Estado" class="ui dropdown search" style="width:100%">
                                <option value="2" selected>Todos</option>
                                <option value="false">Pendientes</option>
                                <option value="true">Confirmados</option>
                            </select>
                        
                    </div>
                    <br />
                <!-- top reservation filter menu -->
                <div class="ui cards overflow-auto" style="max-height: 55em;" id="TargetRese">

                </div>

            </div>
        </div>

        <div class="eleven wide column">
            <div class="ui segment">
                <div class="ui top attached tabular menu" id="Reservation_Details_Info">
                    <a class="item active" onclick="ShowContent('frmReservation_Info',0)">
                        Información
                    </a>
                </div>
                <div class="ui bottom attached segment overflow-auto" id="Reservation_Details_Content"
                     style="padding: 1em !important; max-height: 55em;">

                    <div class="Reservation_Details_Content_Item" id="Default_Item">
                        <h2 class="ui icon header" style=" width: 100%; height: 100%;">
                            <i class="folder open icon"></i>
                            Selecciona una reservación
                        </h2>
                    </div>

                    <div class="Reservation_Details_Content_Item" id="frmReservation_Info" hidden>
                        <div class="ui form attached fluid segment">
                            <div class="content">
                                <div id="InfoDet" hidden>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/HotelModel/Information.js"></script>

}