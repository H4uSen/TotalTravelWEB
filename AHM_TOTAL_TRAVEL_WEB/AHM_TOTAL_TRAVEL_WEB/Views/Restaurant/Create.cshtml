@model AHM_TOTAL_TRAVEL_WEB.Models.RestaurantViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon food"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Crear
                    </div>
                    <p>Ingresa un nuevo restaurante.</p>
                </div>
            </div>

            <!-- formulario-->
            <form>

                <div class="ui form attached fluid segment">
                    <div class="content">

                        <div class="field">
                            <div class=" two fields">
                                <div class="required field">
                                    <label>Restaurante</label>
                                    <input id="Rest_Nombre" placeholder="Restaurante" />
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorRestaurant"></span>
                                </div>
                                <div class="required field">
                                    <label>Socio</label>
                                    <select id="Part_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                                        <option value="">Seleccione un partner</option>
                                    </select>
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorPartner"></span>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label>País</label>
                                    <select id="Count_ID" class="ui dropdown search" asp-items="ViewBag.Count_ID">
                                        <option value="">Seleccione un pais</option>
                                    </select>
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorPais"></span>
                                </div>
                                <div class="required field">
                                    <label>Ciudad</label>
                                    <select id="City_ID" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCity"></span>
                                </div>
                            </div>
                        </div>
                        <div class="required field">
                            <label>Colonia</label>
                            <input id="Colonia" placeholder="Colonia" />
                            <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCol"></span>
                        </div>

                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label>Calle</label>
                                    <input id="Calle" placeholder="Calle" />
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCalle"></span>
                                </div>
                                <div class="required field">
                                    <label>Colonia</label>
                                    <input id="Avenida"  placeholder="Avenida" />
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorAve"></span>
                                </div>
                            </div>
                        </div>


                        <div class="field">
                            <div class="required field">
                                <label>Imagen</label>
                                <input  id="File" type="file"  multiple />
                            </div>
                        </div>
                        <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorError"></span>

                        <input type="button" value="Crear" onclick="createRestaurant()" class="btn btn-purple ui positive button" />
                    </div>
                </div>

            </form>
            <!-- fin formulario-->
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/RestaurantJs/Create.js"></script>
}

