@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.RestaurantListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon food"></i>
            <div class="content">
                <div class="header">
                    Restaurantes
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid mb-3">
            <div class="eight wide column">
                <a class="ui small btn-edit text-white labeled icon button" href="@Url.Action("Create","Restaurant")">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>
        <table id="grdRestaurants" class="display ui compact selectable celled table" style="width:100%;">
                <thead>
                    <tr>
                        <th>
                            Partner
                        </th>
                        <th>
                            Restaurante
                        </th>
                        <th>
                            Dirección
                        </th>
                        <th width="200px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Partner)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Restaurante)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ciudad), @Html.DisplayFor(modelItem => item.Colonia), Calle  @Html.DisplayFor(modelItem => item.Calle), Avenida  @Html.DisplayFor(modelItem => item.Avenida)
                            </td>

                            <td>
                                <a href="@Url.Action("Update","Restaurant",new {  id=item.ID})" class="ui large icon btn-edit button">
                                    <i class="pencil alternate icon  icon-crud"></i>
                                </a>
                                <button class="ui large icon btn-delete button" onclick="DeleteRestaurant('@item.ID')">
                                    <i class="trash alternate icon icon-crud"></i>
                                </button>
                                <a href="@Url.Action("Details","Restaurant",new {  id=item.ID})" class="ui large icon button">
                                    <i class="bi bi-info-circle fa-lg icon-crud"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br>

    </div>
</div>
<br>

@section Scripts{
    <script src="~/js/RestaurantJs/Delete.js"></script>
}

@section HighlightTile{
    <script>

        $("#RestaurantModule").addClass("active");
        $("#RestaurantModule").addClass("expandedList");
        $("#RestaurantModule").prop("aria-expanded");
        $("#RestaurantModule").attr("aria-expanded", "true");

        $("#Restaurant_Schema").addClass("show");

        $("#RestaurantsTile").addClass("activeTile");
    </script>
}