@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.AddressListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        .ui.modal {
            left: auto !important;
            top: auto !important;
            height: auto !important;
        }

        table thead tr th {
            background-color: #2b2b2b;
            color: white;
        }
    </style>
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon map marker alternate"></i>
            <div class="content">
                <div class="header">
                    Direcciones
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <a class="ui small btn-edit text-white labeled icon button" id="createAddress">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Buscar..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>

        <table class="ui compact selectable celled table" id="grdAddress">
            <thead>
                <tr>
                    <th>
                        País
                    </th>
                    <th>
                        Ciudad
                    </th>
                    <th>
                        Colonia
                    </th>
                    <th>
                        Dirección
                    </th>
                    <th width="200px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pais)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Colonia)
                        </td>
                        <td>
                            Calle @Html.DisplayFor(modelItem => item.Calle), Avenida @Html.DisplayFor(modelItem => item.Avenida)
                        </td>
                        <td>
                            <button class="ui large icon btn-edit button" id="createAddress" onclick="GetAddress('@item.ID')">
                                <i class="pencil alternate icon  icon-crud"></i>
                            </button>
                            <button class="ui large icon btn-delete button" onclick="DeleteAddress('@item.ID')">
                                <i class="trash alternate icon icon-crud"></i>
                            </button>
                            <a href="@Url.Action("Details","Address",new {  id=item.ID})" class="ui large icon button">
                                <i class="bi bi-info-circle fa-lg icon-crud"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br>

    </div>
</div>
<br>


<div class="ui modal" id="modalCreate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa una dirección
    </div>
    <form asp-action="Create" id="createAddress">
        <div class="ui form attached fluid segment">
            <div class="content">
                <div class="field">
                    <div class="two fields">
                        <div class="required field">
                            <label class="ui label">País</label>
                            <select id="Count_ID" class="ui dropdown search" asp-items="ViewBag.Count_ID">
                                <option value="">Seleccione un pais</option>
                            </select>
                        </div>
                        <div class="field">
                            <div class="required field">
                                <label class="ui label">Ciudad</label>
                                <select id="City_ID" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
                            </div>
                        </div>
                    </div>
                    <div class="required field">
                        <label class="ui label">Colonia</label>
                        <select id="Col_ID" class="ui dropdown search"><option value="">Seleccione una colonia</option></select>
                    </div>
                </div>
                <div class="field">
                    <div class="two fields">
                        <div class="required field">
                            <label class="ui label">Calle</label>
                            <input id="Calle" placeholder="Calle" />
                        </div>
                        <div class="required field">
                            <label class="ui label">Avenida</label>
                            <input id="Avenida" placeholder="Avenida" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button btn-edit text-white" id="sendAddress">Guardar</button>
        <button class="ui button" id="closeAddress">Cancelar</button>
    </div>
</div>



<div class="ui modal" id="modalUpdate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa una dirección
    </div>
    <form asp-action="Update" id="updateAddress">
        <div class="ui form attached fluid segment">
            <div class="content">
                <div class="field">
                    <div class="two fields">
                        <div class="required field">
                            <label class="ui label">País</label>
                            <select id="Count_IDUpdate" class="ui dropdown search" asp-items="ViewBag.Count_ID">
                                <option value="">Seleccione un pais</option>
                            </select>
                        </div>
                        <div class="field">
                            <div class="required field">
                                <label class="ui label">Ciudad</label>
                                <select id="City_IDUpdate" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
                            </div>
                        </div>
                    </div>
                    <div class="required field">
                        <label class="ui label">Colonia</label>
                        <select id="Col_IDUpdate" class="ui dropdown search"><option value="">Seleccione una colonia</option></select>
                    </div>
                </div>
                <div class="field">
                    <div class="two fields">
                        <input id="addressID" />
                        <div class="required field">
                            <label class="ui label">Calle</label>
                            <input id="CalleUpdate" placeholder="Calle" />
                        </div>
                        <div class="required field">
                            <label class="ui label">Avenida</label>
                            <input id="AvenidaUpdate" placeholder="Avenida" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button btn-edit text-white" id="sendAddressUpdate">Guardar</button>
        <button class="ui button" id="closeAddressUpdate">Cancelar</button>
    </div>
</div>


@section Scripts{

    <script src="~/js/AddressJs/Create.js"></script>
    <script src="~/js/AddressJs/Update.js"></script>
}

<!-- Modal -->
    @section HighlightTile{
    <script>

        $("#GeneralModule").addClass("active");
        $("#GeneralModule").addClass("expandedList");
        $("#GeneralModule").prop("aria-expanded");
        $("#GeneralModule").attr("aria-expanded", "true");

        $("#General_Schema").addClass("show");

        $("#AddressTile").addClass("activeTile");
    </script>
    }