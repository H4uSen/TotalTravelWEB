@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.AddressListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        .ui.modal {
            left: auto !important;
            top: auto !important;
            height: auto !important;
        }
        table thead tr th {
            background-color: #2b2b2b;
            color: white;
        }

    </style>
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon-truck"></i>
            <div class="content">
                <div class="header">
                    Direcciones
                </div>
                <p>Crea, actualiza, elimina o busca y filtra .</p>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                @*<a class="ui small primary labeled icon button" href="@Url.Action("Create","Address")">
                        <i class="user icon"></i> Nuevo
                    </a>*@
                <button id="createAddress" class="ui small primary labeled icon button"><i class="user icon"></i>Nuevo</button>

            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Buscar..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>

        <table class="ui compact selectable celled table" id="grdAddress">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ciudad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pais)
                    </th>
                    <th width="500"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Direccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pais)
                        </td>
                        <td>
                            <button class="ui large icon positive button">
                                <i class="pencil alternate icon"></i>
                            </button>
                            <button class="ui large icon negative button">
                                <i class="trash alternate icon"></i>
                            </button>
                            <button class="ui large icon yellow button">
                                <i class="folder open outline icon"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br>

    </div>
</div>
<br>


<div class="ui modal" id="modalCreate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa una dirección
    </div>
    <form asp-action="Create" id="createAddress">
        <div class="ui form attached fluid segment">
            <div class="content">
                <div class="field">
                    <input id="Colonia"  placeholder="Colonia" />
                    <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCol"></label>
                </div>

                <div class="field">
                    <div class="two fields">
                        <div class="field">
                            <input id="Calle" placeholder="Calle" />
                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCalle"></label>
                        </div>
                        <div class="field">
                            <input id="Avenida" placeholder="Avenida" />
                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorAve"></label>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="two fields">
                        <div class="field">
                            <select id="Count_ID" class="ui dropdown search" asp-items="ViewBag.Count_ID">
                                <option value="">Seleccione un pais</option>
                            </select>
                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorPais"></label>
                        </div>
                        <div class="field">
                            <div class="field">
                                <select id="City_ID" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
                                <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCity"></label>
                            </div>
                        </div>
                    </div>

                    <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorError"></label>
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button" id="closeAddress">Cerrar</button>
        <button class="ui button" id="sendAddress">Guardar</button>
    </div>
</div>

@section Scripts{
    <script src="~/js/AddressJs/Create.js"></script>
}

