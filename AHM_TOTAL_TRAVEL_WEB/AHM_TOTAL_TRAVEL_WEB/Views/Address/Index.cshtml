@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.AddressListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        .ui.modal {
            left: auto !important;
            top: auto !important;
            height: auto !important;
        }
        table thead tr th {
            background-color: #2b2b2b;
            color: white;
        }

    </style>
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon map marker alternate"></i>
            <div class="content">
                <div class="header">
                    Direcciones
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
            <a class="ui small btn-purple text-white labeled icon button" id="createAddress">
                <i class="plus icon"></i> Nuevo
            </a>
        </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Buscar..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>

        <table class="ui compact selectable celled table" id="grdAddress">
            <thead>
                <tr>

                    <th>
                        @*@Html.DisplayNameFor(model => model.Direccion)*@
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ciudad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pais)
                    </th>
                    <th width="200px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @*@Html.DisplayFor(modelItem => item.Direccion)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pais)
                    </td>
                    <td>
                        <button class="ui large icon btn-edit button" id="createAddress" >
                            <i class="pencil alternate icon  icon-crud"></i>
                        </button>
                        <button class="ui large icon btn-delete button" >
                            <i class="trash alternate icon icon-crud"></i>
                        </button>
                        <a  class="ui large icon button">
                            <i class="bi bi-info-circle fa-lg icon-crud"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <br>

    </div>
</div>
<br>


<div class="ui modal" id="modalCreate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa una dirección
    </div>
    <form asp-action="Create" id="createAddress">
        <div class="ui form attached fluid segment">
            <div class="content">
                <div class="field">
                    <input id="Colonia"  placeholder="Colonia" />
                    <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCol"></label>
                </div>

                <div class="field">
                    <div class="two fields">
                        <div class="field">
                            <input id="Calle" placeholder="Calle" />
                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCalle"></label>
                        </div>
                        <div class="field">
                            <input id="Avenida" placeholder="Avenida" />
                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorAve"></label>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <div class="two fields">
                        <div class="field">
                            <select id="Count_ID" class="ui dropdown search" asp-items="ViewBag.Count_ID">
                                <option value="">Seleccione un pais</option>
                            </select>
                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorPais"></label>
                        </div>
                        <div class="field">
                            <div class="field">
                                <select id="City_ID" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
                                <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCity"></label>
                            </div>
                        </div>
                    </div>

                    <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorError"></label>
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button btn-purple text-white" id="sendAddress">Guardar</button>
        <button class="ui button" id="closeAddress">Cancelar</button>
    </div>
</div>

@section Scripts{
    <script src="~/js/AddressJs/Create.js"></script>
}

