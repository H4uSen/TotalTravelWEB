@model AHM_TOTAL_TRAVEL_WEB.Models.AddressViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon food"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Crear
                    </div>
                    <p>Ingresa un nuevo tipo de menú.</p>
                </div>
            </div>
            <!-- formulario-->
            <form asp-action="Create">

                <div class="ui form attached fluid segment">
                    <div class="content">

                        <div class="field">
                            <label class="control-label">Restaurante</label>
                            <div class="two fields">
                                <div class="field">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label class="control-label">Pais</label>
                                        <select id="Count_ID" class="form-control mt-2 bg-white text-dark" asp-items="ViewBag.Count_ID"></select>
                                    </div>
                                    <label class="labelvalidator" id="labelvalidatorPais"></label>
                                </div>
                                <div class="field">
                                    <div class="form-group">
                                        <label class="control-label">Ciudad</label>
                                        <select asp-for="Ciud_ID" class="form-control mt-2 bg-white text-dark" asp-items="ViewBag.City_ID"></select>
                                        <span asp-validation-for="Ciud_ID" class="text-danger"></span>
                                    </div>
                                    <label class="labelvalidator" id="labelvalidatorCiudad"></label>
                                </div>
                            </div>
                            <div class="field">
                                <div class="form-group">
                                    <label class="control-label">Dirección</label>
                                    <input asp-for="Dire_Descripcion" class="form-control" />
                                    <span asp-validation-for="Dire_Descripcion" class="text-danger"></span>
                                </div>
                                <label class="labelvalidator" id="labelvalidatorDireccion"></label>
                            </div>
                                <div class="form-group">
                                    <input type="button" id="sendAddress" value="Crear" class="btn btn-primary ui positive button" />
                                </div>
                            </div>
                        </div>
                </div>
            </form>

            <!-- fin formulario-->

        </div>
    </div>
</div>



