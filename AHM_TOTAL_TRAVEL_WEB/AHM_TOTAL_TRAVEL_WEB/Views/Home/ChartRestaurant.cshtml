
@{
    ViewData["Title"] = "Gráficos del Restaurante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        #a {
            text-decoration: none;
        }

        #carta {
            max-height: 300px !important;
        }

        .highcharts-figure,
        .highcharts-data-table table {
            min-width: 320px;
            max-width: 660px;
            margin: 1em auto;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td,
        .highcharts-data-table th,
        .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr,
        .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }

        #a {
            text-decoration: none;
        }

        #carta {
            max-height: 300px !important;
        }
    </style>
}

@model IEnumerable<restaurantsDashboardDetail>

<header class="bg-white shadow-sm px-4 py-3 z-index-20">
    <div class="container-fluid px-0">
        <h2 class="mb-0 p-1">Gráficos</h2>
    </div>
</header>

<section class="pb-0">
    <div class="container-fluid">
        <div class="row align-items-stretch" style="padding-top: 20px">
            <div class="col-lg-6 col-12">
                <div class="card mb-0" id="c2">
                    <div class="card-body" id="conten2" style="justify-content:center">
                        <div id="container2"></div>
                    </div>
                    <center>
                        <div class="col-md-6">
                            <button class="btn btn-light" onclick="printDiv('#c2 .card-body')">
                                <span class="material-symbols-outlined">
                                    Imprimir
                                </span>
                            </button>
                        </div>
                    </center>
                    <br />
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="card mb-0" id="c3">
                    <div class="card-body" id="conten3" style="justify-content:center">
                        <div id="container3"></div>
                    </div>
                    <center>
                        <div class="col-md-6">
                            <button class="btn btn-light" onclick="printDiv('#c3 .card-body')">
                                <span class="material-symbols-outlined">
                                    Imprimir
                                </span>
                            </button>
                        </div>
                    </center>
                    <br />
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/js/restaurantDashboard/Graficos.js"></script>
}

@section HighlightTile{
    <script>
        $("#menu_item_dashboard").addClass("activeTile");
    </script>
}
