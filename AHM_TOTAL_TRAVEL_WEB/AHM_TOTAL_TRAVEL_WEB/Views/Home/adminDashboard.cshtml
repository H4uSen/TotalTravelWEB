@model AdminDashboardViewModel
@{
    ViewData["Title"] = "adminDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="bg-white shadow-sm px-4 py-3 z-index-20">
    <div class="container-fluid px-0">
        <h2 class="mb-0 p-1">Dashboard</h2>
    </div>
    <style>
        .highcharts-figure,
        .highcharts-data-table table {
            min-width: 320px;
            max-width: 660px;
            margin: 1em auto;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td,
        .highcharts-data-table th,
        .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr,
        .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }

        #a {
            text-decoration: none;
        }

        #carta {
            max-height: 300px !important;
        }
    </style>
</header>

<section class="pb-0">
    <div class="container-fluid">
        <div class="card mb-0">
            <div class="card-body">
                <div class="row gx-5 bg-white">
                    <!-- Item -->
                    <div class="col-xl-4 col-sm-12 py-4 border-lg-end border-gray-200">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-violet">
                                <svg class="svg-icon svg-icon-sm svg-icon-heavy">
                                    <use xlink:href="#user-1"> </use>
                                </svg>
                            </div>
                            <div class="mx-3">
                                <h6 class="h4 fw-light text-gray-600 mb-3">AGENCIAS DE<br>HOTELERÍA</h6>
                            </div>
                            <div class="number" style="padding-right: 30px;">
                                <strong class="text-lg">@ViewData["agencias_hotel_count"]</strong>
                            </div>
                        </div>
                    </div>
                    <!-- Item -->
                    <div class="col-xl-4 col-sm-12 py-4 border-lg-end border-gray-200">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-red">
                                <svg class="svg-icon svg-icon-sm svg-icon-heavy">
                                    <use xlink:href="#survey-1"> </use>
                                </svg>
                            </div>
                            <div class="mx-3">
                                <h6 class="h4 fw-light text-gray-600 mb-3">AGENCIAS DE<br>TRANSPORTE</h6>
                            </div>
                            <div class="number" style="padding-right: 30px;">
                                <strong class="text-lg">@ViewData["agencias_transportes_count"]</strong>
                            </div>
                        </div>
                    </div>
                    <!-- Item -->
                    <div class="col-xl-4 col-sm-12 py-4 border-lg-end border-gray-200">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-green">
                                <svg class="svg-icon svg-icon-sm svg-icon-heavy">
                                    <use xlink:href="#numbers-1"> </use>
                                </svg>
                            </div>
                            <div class="mx-3">
                                <h6 class="h4 fw-light text-gray-600 mb-3">AGENCIAS DE <br>TURISMO</h6>
                            </div>
                            <div class="number" style="padding-right: 30px;">
                                <strong class="text-lg">@ViewData["agencias_turismo_count"]</strong>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<section class="pb-0">
    <div class="container-fluid">
        <div class="row align-items-stretch">
            <!-- Statistics -->
            <div class="col-lg-3 col-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <select id="dbbFiltro" class="form-select form-select-lg" aria-label="Filtro:" width: 500px;>
                                <option selected disabled>Seleccione un filtro:</option>
                                <option value="0">Filtrar por reservaciones</option>
                                <option value="1">Filtrar por sexo</option>
                                <option value="2">Filtrar por estado civil</option>
                                <!--<option value="3">Three</option>-->
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-red"><i class="fas fa-tasks"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["reservarion_count"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">RESERVACIONES</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-green"><i class="far fa-calendar"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["paquetes_count"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">PAQUETES DE VIAJE</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-orange"><i class="far fa-paper-plane"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["partners_count"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">PARTNERS</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-red"><i class="fas fa-tasks"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["clientes_count"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">USUARIOS</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Line Chart            -->
            <div class="col-lg-9 col-12">
                <div class="card mb-0 h-100" id="c1">
                    <div class="card-body" id="content1">
                        <div id="container"></div>
                    </div>
                    <center>
                        <div class="col-md-6 mb-3">
                            <button class="btn btn-light" onclick="printDiv('#c1 .card-body')">
                                <span class="material-symbols-outlined">
                                    Imprimir
                                </span>
                            </button>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </div>
</section>

