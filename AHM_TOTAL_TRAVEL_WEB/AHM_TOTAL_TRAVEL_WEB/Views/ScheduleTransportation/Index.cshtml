@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.ScheduleTransportationListViewModel>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon clock"></i>
            <div class="content">
                <div class="header">
                    Horarios Transporte
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid mb-3">
            <div class="eight wide column">
                <a class="ui small btn-edit text-white labeled icon button" id="btnCrearhorario">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>
        <table id="grdScheduleTransport" class="display ui compact selectable celled table" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        Ciudad Salida
                    </th>
                    <th>
                        Ciudad Destino
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Hora de Salida
                    </th>
                    <th>
                        Hora de llegada
                    </th>
                    <th>
                        Socio
                    </th>
                    <th width="200px">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad_Salida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad_Destino)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hora_Salida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hora_Llegada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Partner_Nombre)
                        </td>

                        <td>
                            <button class="ui large icon btn-edit button" id="UpdateBottomSchedule" onclick="GetScheduleID(@item.ID)">
                                <i class="pencil alternate icon icon-crud"></i>
                            </button>
                            <button class="ui large icon negative button" onclick="DeleteHorarios(@item.ID)">
                                <i class="trash alternate icon icon-crud"></i>
                            </button>
                            <a href="@Url.Action("Details","ScheduleTransportation",new {id=item.ID})" class="ui large icon button">
                                <i class="bi bi-info-circle fa-lg icon-crud"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br>

    </div>
</div>
<br>

<div class="ui modal longer" id="modalCreate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa un Horario
    </div>
    <form asp-action="Create" asp-controller="ScheduleTransportation" id="createScheduleForm">
        <div class="ui form attached fluid segment">
            <div class="content">
                @{
                    string usersRole = Context.Session.GetString("Role");
                    if (usersRole == "Administrador")
                    {
                        <div class="required field">
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Socio</label>
                                    <select id="Partner_ID" name="Partner_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                                        <option value="">Seleccione un socio</option>
                                    </select>
                                </div>
                                <div class="required field">
                                    <label class="ui label">Fecha</label>
                                    <input type="date" id="FechaViaje" name="HoTr_Fecha" placeholder="Seleccione una Fecha" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Hora de salida</label>
                                    <input type="time" id="HoTr_HoraSalida" name="HoTr_HoraSalida" placeholder="Hora de Salida" />
                                </div>
                                <div class="required field">
                                    <label class="ui label">Hora de llegada</label>
                                    <input type="time" id="HoTr_HoraLlegada" name="HoTr_HoraLlegada" placeholder="Hora de Llegada " />
                                </div>
                            </div>
                            <div class="label" id="labelIguales" hidden></div>
                            <div class="two fields" id="DD_DsTr_ID" hidden>
                                <div class="required field">
                                    <label class="ui label">Destino</label>
                                    <select id="DsTr_ID" name="DsTr_ID" class="ui dropdown search" asp-items="ViewBag.DsTr_ID">
                                        <option value="">Seleccione el Destino</option>
                                    </select>
                                </div>
                            </div>
                            <div class="labelvalidator" id="labelIguales" hidden></div>
                        </div>
                    }
                    if (usersRole == "Moderador de Transporte")
                    {
                        <div class="required field">
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Destino</label>
                                    <select id="DsTr_ID" name="DsTr_ID" class="ui dropdown search" asp-items="ViewBag.DsTr_ID">
                                        <option value="">Seleccione el Destino</option>
                                    </select>
                                </div>
                                <div class="required field">
                                    <label class="ui label">Fecha</label>
                                    <input type="date" id="FechaViaje" name="HoTr_Fecha" placeholder="Seleccione una Fecha" />
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Hora de salida</label>
                                    <input type="time" id="HoTr_HoraSalida" name="HoTr_HoraSalida" placeholder="Hora de Salida" />
                                </div>
                                <div class="required field">
                                    <label class="ui label">Hora de llegada</label>
                                    <input type="time" id="HoTr_HoraLlegada" name="HoTr_HoraLlegada" placeholder="Hora de Llegada " />
                                </div>
                            </div>
                            <div class="two fields" id="DD_Part_ID2" hidden>
                                <div class="required field">
                                    <label class="ui label">Socio</label>
                                    <select id="Partner_ID" name="Partner_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                                        <option value="">Seleccione un socio</option>
                                    </select>
                                </div>
                            </div>
                            <div class="labelvalidator" id="labelIguales" hidden></div>
                        </div>
                    }
                }
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button btn-purple text-white" id="SendSchedule">Guardar</button>
        <button class="ui button" id="closeSchedule">Cancelar</button>
    </div>
</div>


