@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.ScheduleTransportationListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon clock"></i>
            <div class="content">
                <div class="header">
                    Horarios Transporte
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <a class="ui small btn-purple text-white labeled icon button" href="@Url.Action("Create","Restaurant")">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Buscar..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>

        <table class="ui compact selectable celled table" id="grdRestaurants">
            <thead>
                <tr>
                    <th>
                        Ciudad Salida
                    </th>
                    <th>
                        Ciudad Destino
                    </th>
                    <th>
                        Fecha
                    </th>
                    <th>
                        Hora de Salida
                    </th>
                    <th>
                        Hora de llegada
                    </th>
                    <th width="200px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad_Salida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ciudad_Destino)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hora_Salida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hora_Llegada)
                        </td>

                        <td>
                            <a href="@Url.Action("Update","Restaurant",new {  id=item.ID})" class="ui large icon btn-edit button">
                                <i class="pencil alternate icon  icon-crud"></i>
                            </a>
                            <button class="ui large icon btn-delete button" onclick="DeleteRestaurant('@item.ID')">
                                <i class="trash alternate icon icon-crud"></i>
                            </button>
                            <a href="@Url.Action("Details","Restaurant",new {  id=item.ID})" class="ui large icon button">
                                <i class="bi bi-info-circle fa-lg icon-crud"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table><br>

    </div>
</div>
<br>

@section HighlightTile{
    <script>
        $("#TransportModule").addClass("active");
        $("#Schedule_Index").addClass("active");
        $("#Transport_Schema").addClass("show");
        $("#TransportModule").addClass("expandedList")
    </script>
}
