@model AHM_TOTAL_TRAVEL_WEB.Models.ReservationDetailsListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@try
{
    <div id="frmCreateUser">
        <div class="container card">
            <div class="ui basic segment">
                <div class="ui icon attached message">
                    <i class="file alternate icon"></i>
                    <div class="content">
                        <div class="header text-capitalize">
                            Detalles de una Reserva
                        </div>
                    </div>
                    <div class="right floated content" style="text-align: end;">
                        <a class="ui left labeled icon button" href="@Url.Action("Index", "ReservationDetails")">
                            Regresar
                            <i class="left arrow icon"></i>
                        </a>
                    </div>
                </div>
                <div class="ui form attached fluid segment">
                    <div class="content">
                        <div class="field">
                            <div class="three fields">
                                <div class="field">
                                    <label>ID</label>
                                    @Html.DisplayFor(model => model.ID)

                                </div>
                                <div class="field">
                                    <label>Habitación</label>
                                    @Html.DisplayFor(model => model.Nombre_Habitacion)

                                </div>
                                <div class="field">
                                    <label>Descripción</label>
                                    @Html.DisplayFor(model => model.Descripcion_Habitacion)
                                </div>
                            </div>
                            <div class="three fields">
                                <div class="field">
                                    <label>Categoría</label>
                                    @Html.DisplayFor(model => model.Categoria_Habitacion)

                                </div>
                                <div class="field">
                                    <label>Hotel</label>
                                    @Html.DisplayFor(model => model.Hotel)

                                </div>
                                <div class="field">
                                    <label>Precio Habitación</label>
                                    @Html.DisplayFor(model => model.Precio_Habitacion)
                                </div>
                            </div>
                            <div class="three fields">
                                <div class="field">
                                    <label>Fecha Entrada</label>
                                    @Html.DisplayFor(model => model.Fecha_Entrada)

                                </div>
                                <div class="field">
                                    <label>Fecha Salida</label>
                                    @Html.DisplayFor(model => model.Fecha_Salida)

                                </div>
                                <div class="field">
                                    <label>Precio Reservación Hotel</label>
                                    @Html.DisplayFor(model => model.Precio_ReservacionHotel)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <h3 class="ui horizontal divider header">
                    <i class="folder open icon"></i>
                    Auditoría
                </h3>

                <table class="ui compact selectable celled table" id="tabla">
                    <thead>
                        <tr>
                            <th>
                                Usuario Creación
                            </th>
                            <th>
                                Fecha Creación
                            </th>
                            <th>
                                Usuario modifica
                            </th>
                            <th>
                                Fecha modifica
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.Usuario_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Fecha_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Usuario_Modifica)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Fecha_Modifica)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
catch (Exception)
{
    <script>location.assign("@Url.Action("Error", "Home")");</script>
}

@section HighlightTile{
    <script>
        highlightTile();
    </script>
}