@model AHM_TOTAL_TRAVEL_WEB.Models.UserListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        body {
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

            .gutters-sm > .col, .gutters-sm > [class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }

        .btn-primary {
            background-color: #652D90;
            border: none;
        }

            .btn-primary:hover {
                background-color: #8F46C5 !important;
                border: none;
            }

        .min-width-0 {
            width:100% !important; 
            min-width:auto !important;
        }
    </style>
}

<div class="container">
    <div class="main-body">

        <!-- /Breadcrumb -->
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150" id="image_profile">
                            <div class="mt-3">
                                <h4>@string.Concat(Model.Nombre," ",Model.Apellido)</h4>
                                <p class="text-secondary mb-1"> @Html.DisplayFor(model => model.Rol)</p>
                                <p class="text-muted font-size-sm">@Html.DisplayFor(model => model.Telefono)</p>
                                <a class="btn btn-primary w-100" href="#" id="editar">Editar</a>
                                <!--<button class="btn btn-outline-primary">Message</button>-->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">E-mail</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                        <hr><div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Rol</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Rol)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Socio</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Partner)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3" id="info">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombre completo</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">DNI</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.DNI)
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Fecha de nacimiento</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Fecha_Nacimiento)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Teléfono</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Telefono)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Sexo</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Sexo)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Dirección</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewData["DireccionExacta"]
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card" id="formedit">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombre</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" id="Usua_Nombre" value="@Model.Nombre">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Apellido</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" id="Usua_Apellido" value="@Model.Apellido">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">DNI</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" id="Usua_DNI" value="@Model.DNI">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefono</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" id="Usua_Telefono" value="@Model.Telefono">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Dirección</h6>
                            </div>
                            <div class="col-sm-9">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <select class="ui dropdown search min-width-0" id="Pais" asp-items="ViewBag.Paises">
                                            <option value="">Seleccione un país</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-6">
                                        <select class="ui dropdown search min-width-0" id="Ciudad">
                                            <option value="">Seleccione una ciudad</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-12">
                                        <br />
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">Colonia</span>
                                        </div>
                                        <input type="text" class="form-control" id="Colonia" value="@ViewData["Colonia"]">

                                    </div>
                                    <div class="col-sm-6">
                                        <br />
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Avenida</span>
                                            </div>
                                            <input type="text" class="form-control" id="Avenida" value="@ViewData["Avenida"]">
                                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCol"></label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <br />
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="basic-addon1">Calle</span>
                                            </div>
                                            <input type="text" class="form-control" id="Calle" value="@ViewData["Calle"]">
                                            <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCol"></label>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Foto de perfil</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="file" class="form-control" id="File">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-9 text-secondary">
                                <button onclick="UpdateUser()" class="btn btn-primary px-4">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{


    <script>

        $('.ui.dropdown').dropdown();
        $('#formedit').hide();


        $("#editar").click(() => {
            $("#info").transition('slide down');
            $("#formedit").transition('slide up');
        });

        const Pais_ID = "@ViewData["Pais"]";
        const Ciud_ID = "@ViewData["Ciudad"]";
        const Colonia_ID = "@ViewData["Colonia"]";

    </script>
    <script src="~/js/UsersJs/UsersAccount.js"></script>
}