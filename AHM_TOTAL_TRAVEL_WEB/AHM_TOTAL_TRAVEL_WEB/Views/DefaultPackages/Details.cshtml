@model AHM_TOTAL_TRAVEL_WEB.Models.DefaultPackagesListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon archive"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Detalles
                    </div>
                    
                </div>                
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "DefaultPackages")">
                        Regresar
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>
            <div class="ui form attached fluid segment">
                <div class="content">
                    <div class="field">
                        <div class="two fields">
                            <div class="field">
                                <label>Nombre</label>
                                @Html.DisplayFor(model => model.Nombre)
                            </div>
                            <div class="field">
                                <label>Descripción</label>
                                @Html.DisplayFor(model => model.Descripcion_Paquete)
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="two fields">
                            <div class="field">
                                <label>Duración</label>
                                @Html.DisplayFor(model => model.Duracion_Paquete)
                            </div>
                            <div class="field">
                                <label>Precio</label>
                               L. @Html.DisplayFor(model => model.precio)
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <div class="two fields">
                            <div class="field">
                                <label>Hotel</label>
                                @Html.DisplayFor(model => model.Hotel)
                            </div>
                            <div class="field">
                                <label>Restaurante</label>
                                @Html.DisplayFor(model => model.Restaurante)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            
            <h3 class="ui horizontal divider header">
                <i class="folder open icon"></i>
                Auditoría
            </h3>

            <table class="ui compact selectable celled table" id="tabla">
                <thead>
                    <tr>
                        <th>
                            Usuario Creación
                        </th>
                        <th>
                            Fecha Creación
                        </th>
                        <th>
                            Usuario Modifica
                        </th>
                        <th>
                            Fecha Modifica
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.Usuario_Creacion)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Fecha_Creacion)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Usuario_Modifica)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Fecha_Modifcia)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@section HighlightTile{
    <script>
        $("#SalesModule").addClass("active");
        $("#Sale_Schema").addClass("show");
        $("#SalesModule").addClass("expandedList")
    </script>
}
