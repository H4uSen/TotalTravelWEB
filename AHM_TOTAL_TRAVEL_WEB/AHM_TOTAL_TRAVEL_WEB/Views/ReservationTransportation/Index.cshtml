@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.ReservationTransportationListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="bus icon"></i>
            <div class="content">
                <div class="header">
                    Reservacion Transporte
                </div>
            </div>
        </div>
        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <a class="ui small btn-edit text-white labeled icon button" href="@Url.Action("Create","ReservationTransportation")">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Search..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>

        <table class="ui compact selectable celled table" id="grdReservationTransportation">
            <thead>
                <tr>
                    <th>
                        Capacidad (Personas)
                    </th>
                    <th>
                        Precio (L)
                    </th>
                    <th>
                        Cliente
                    </th>
                    <th>
                        Asiento
                    </th>
                    <th>
                        Pagado
                    </th>
                    <th>
                        Fecha Cancelado
                    </th>
                    <th width="200px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Capacidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Asientos)
                        </td>
                        <td>
                            @{ if (item.Cancelado == true)
                                {
                                    <span class="ui green label">Pagado</span>
                                }
                                else
                                {
                                    <span class="ui red label">No Pagado</span>
                                }
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Cancelado)
                        </td>


                        <td>

                            <a href="@Url.Action("Update","ReservationTransportation",new {  id=item.Id})" class="ui large icon btn-edit button">
                                <i class="pencil alternate icon  icon-crud"></i>
                            </a>
                            <button class="ui large icon btn-delete button" onclick="DeleteReservacionTransporte('@item.Id')">
                                <i class="trash alternate icon icon-crud"></i>
                            </button>
                            <a href="@Url.Action("Details","ReservationTransportation",new {  id=item.Id})" class="ui large icon button">
                                <i class="bi bi-info-circle fa-lg icon-crud"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table><br>

    </div>
</div>
<br>


@section Scripts{

    <script src="~/js/ReservacionTransporte/Delete.js"></script>

    <script>

        const success = FindGetValue("success");

        if (success) {
            iziToastAlert("Proceso completado", "La acción se ha completado exitosamente.", "success")
        }

    </script>
}

@section HighlightTile{
    <script>

        $("#ReservationModule").addClass("active");
        $("#ReservationModule").addClass("expandedList");
        $("#ReservationModule").prop("aria-expanded");
        $("#ReservationModule").attr("aria-expanded", "true");

        $("#Reservation_Schema").addClass("show");

        $("#ReservationTransportationTile").addClass("activeTile");
    </script>
}

