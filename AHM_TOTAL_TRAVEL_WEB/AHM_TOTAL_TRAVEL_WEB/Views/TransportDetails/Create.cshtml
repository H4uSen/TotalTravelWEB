@model AHM_TOTAL_TRAVEL_WEB.Models.TransportDetailsViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon car"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Crear
                    </div>
                </div>
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "TransportDetails")">
                        Regresar
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>
            <form asp-action="Create" id="FrmDetallesTranporte">
                <div class="ui form attached fluid segment">
                    <div class="content">
                        <div class="three fields">
                            <div class="required field">
                                <label class="ui label">Transporte</label>
                                <select id="Tprt_ID" name="Tprt_ID" class="ui dropdown search" asp-items="ViewBag.Tprt_ID" asp-for="Tprt_ID">
                                    <option value="">Seleccione un transporte</option>
                                </select>
                            </div>
                            <div class="required field">
                                <label class="ui label">Capacidad</label>
                                <input asp-for="DeTr_Capacidad" placeholder="Capacidad" type="number" min="1" oninput="this.value = Math.abs(this.value)" />
                            </div>
                            <div class="required field">
                                <label class="ui label">Horario</label>
                                <select id="HoTr_ID" name="HoTr_ID" class="ui dropdown search" asp-for="HoTr_ID">
                                    <option value="">Seleccione un horario</option>
                                </select>
                            </div>
                        </div>
                        <div class="three fields">
                            <div class="required field">
                                <label class="ui label">Precio</label>
                                <div class="ui right labeled input">
                                    <input type="number" min="1" oninput="this.value = Math.abs(this.value)" placeholder="Precio" asp-for="DeTr_Precio">
                                    <div class="ui basic label">.00</div>
                                </div>
                            </div>
                            <div class="required field">
                                <label class="ui label">Matricula</label>
                                <input asp-for="DeTr_Matricula" placeholder="Matricula" />
                            </div>

                        </div>

                        <input id="btnGuardar" type="button" value="Guardar" class="btn btn-edit ui positive button" />
                        <a type="button" href="@Url.Action("Index", "TransportDetails")" class="ui button mb-3 ms-3">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/TransportDetails/Create.js"></script>
    <script>
        $("#btnGuardar").click(() => {
            const ValidateArray = [
                { validateMessage: "Seleccione un tipo de transporte", Jqueryinput: $("#Tprt_ID") },
                { validateMessage: "Ingrese la cantidad", Jqueryinput: $("#DeTr_Capacidad") },
                { validateMessage: "Seleccione un horario", Jqueryinput: $("#HoTr_ID") },
                { validateMessage: "Ingrese el precio", Jqueryinput: $("#DeTr_Precio") },
                { validateMessage: "Ingrese la matricula", Jqueryinput: $("#DeTr_Matricula") }

            ];
            const userValidate = ValidateForm(ValidateArray);
            if (userValidate) {
                $("#FrmDetallesTranporte").submit();
            }
        });
    </script>
    <script>
        const params = new URLSearchParams(window.location.search);
        const izziSuccess = params.get("success");

        if (izziSuccess == "true") {
            iziToastAlert(title = "Proceso completado", message = "La acción se ha completado exitosamente.", type = "success");
        }

    </script>
}

@section HighlightTile{
    <script>
        highlightTile();
    </script>

}



