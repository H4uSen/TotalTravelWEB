@{
    ViewData["Title"] = "HotelesDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        #a {
            text-decoration: none;
        }

        #carta {
            max-height: 300px !important;
        }
    </style>
}

<header class="bg-white shadow-sm px-4 py-3 z-index-20">
    <div class="container-fluid px-0">
        <h2 class="mb-0 p-1">Dashboard</h2>
    </div>
</header>

<section class="pb-0">
    <div class="container-fluid">
        <div class="row align-items-stretch">
            <!-- Statistics -->
            <div class="col-lg-3 col-12">
                <div class="card mb-0">
                    <div class="card-body text-center">
                        <div class="client-avatar mb-3">
                            <img class="img-fluid rounded-circle shadow-0" src="@ViewData["Imagen"]">
                        </div>
                        <h3 class="fw-normal">@ViewData["Partner"]</h3>
                        <p class="text-sm text-gray-500 mb-1">@ViewData["Direccion"]</p>
                    </div>
                </div>
                <br />
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-green"><i class="far fa-calendar"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["Hoteles"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">Hoteles</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-green"><i class="far fa-calendar"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["Habitaciones"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">Habitaciones</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-green"><i class="far fa-calendar"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["Actividades"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">Actividades</small>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon flex-shrink-0 bg-red"><i class="fas fa-tasks"></i></div>
                            <div class="ms-3">
                                <strong class="text-lg d-block lh-1 mb-1">@ViewData["menus"]</strong>
                                <small class="text-uppercase text-gray-500 small d-block lh-1">Menus</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Line Chart -->
            <div class="col-lg-9 col-12">
              
                <br />
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="chartjs-size-monitor">
                            <div class="chartjs-size-monitor-expand">
                                <div class="">
                                    <div id="container"></div>
                                </div>
                            </div>
                            <div class="chartjs-size-monitor-shrink">
                                <div class="">
                                </div>
                            </div>
                        </div>
                        <canvas id="lineCahrt" @*style="display: block; width: 458px; height: 229px;" width="458" height="229"*@ class="chartjs-render-monitor"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section scripts{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script>
    var UrlBase = 'http// ' + '@Context.Request.Host' + '@Context.Request.Path'
    </script>
    <script src="~/js/HotelModel/Graficos.js"></script>
}

@section HighlightTile{
    <script>

        $("#ReportModule").addClass("active");
        $("#ReportModule").addClass("expandedList");
        $("#ReportModule").prop("aria-expanded");
        $("#ReportModule").attr("aria-expanded", "true");

        $("#Report_Schema").addClass("show");

        $("#DasboharTile").addClass("activeTile");
    </script>
}