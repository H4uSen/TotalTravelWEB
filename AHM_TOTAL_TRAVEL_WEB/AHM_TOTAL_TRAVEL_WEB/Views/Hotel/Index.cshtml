@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.HotelListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="building icon"></i>
            <div class="content">
                <div class="header">
                    Hoteles
                </div>
                <p>Create, Update, Delete or Search and Filter Users.</p>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <a class="ui small primary labeled icon button" href="@Url.Action("Create", "Hotel")">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Search..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>

        <table class="ui compact selectable celled table" id="tabla">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th><th>
                        @Html.DisplayNameFor(model => model.Hotel)
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Dirección
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Partners)
                    </th>
                    <th width="300px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                     <tr>
                         <td>
                             @Html.DisplayFor(modelItem => item.ID)
                         </td><td>
                             @Html.DisplayFor(modelItem => item.Hotel)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.Descripcion)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.Direccion)
                         </td>
                         <td>
                             @Html.DisplayFor(modelItem => item.Partners)
                         </td>
                         <td>
                             <button class="ui large icon positive button">
                                 <i class="pencil alternate icon"></i>
                             </button>
                             <button class="ui large icon negative button">
                                 <i class="trash alternate icon"></i>
                             </button>
                             <button class="ui large icon yellow button">
                                 <i class="folder open outline icon"></i>
                             </button>
                         </td>
                    </tr>
                 }
            </tbody>
        </table><br>

    </div>
</div>




@section Scripts{
    <script>
        // ----------------------------------- EVENTS ------------------------------------
        $("#txtSearch").keyup(function () {
            _this = this;
            $.each($("#tabla tbody tr"), function () {
                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) === -1) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });

            $("#tabla").paginationTdA({
                elemPerPage: 5
            });
        });

        $("#tabla").paginationTdA({
            elemPerPage: 5
        });
    </script>
}