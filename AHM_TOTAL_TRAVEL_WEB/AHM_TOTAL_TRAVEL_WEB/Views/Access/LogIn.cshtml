@model AHM_TOTAL_TRAVEL_WEB.Models.UserLoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Total Travel - Inicia Sesión</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- Choices CSS-->
    <link rel="stylesheet" href="../assets/vendor/choices.js/public/assets/styles/choices.min.css">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="../assets/css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="../assets/css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="../assets/img/favicon.ico">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->

</head>
<body>
    <div class="login-page" style="background-color: #e1e1e169; ">
        <div class="container d-flex align-items-center justify-content-md-center position-relative py-5 p-lg-5">
            <div class="card shadow-sm w-75 rounded overflow-hidden bg-none "
                 style="align-items: center;align-content: flex-start">
                <div class="card-body p-0">
                    <div class="row gx-0 align-items-stretch">
                        <!-- Logo & Information Panel-->
                        <div class="col-lg-7 justify-content-md-center">
                            <div class="info d-flex justify-content-md-center align-content-center flex-column p-5 h-100">
                                <img src="../assets/img/AHM-Fondo-Nombre-2.png" class="img-fluid" width="90%" height="auto" alt="imagen de logo">
                            </div>
                        </div>
                        <!-- Form Panel    -->
                        <div class="col-lg-5 bg-white">
                            <div class="d-flex align-items-center px-5 px-lg-5 h-100">

                                <form class="login-form py-2 w-100" asp-controller="Access" asp-action="LogIn" style="font-size: x-large;">
                                    <div style="margin-bottom: 2vh;">
                                        <h1 style="font-size: revert;">TotalTravel</h1>
                                        <br />
                                        <h3>Iniciar Sesion</h3>
                                    </div>
                                    <div class="input-material-group">
                                        <input asp-for="Email" type="text" class="input-material" style="font-size: medium;" autocomplete="off">
                                        <label class="label-material" for="login-username" style="font-size: large;">Correo electrónico</label>
                                    </div>
                                    <label class="labelvalidator" id="labelvalidatorEmail"></label>
                                    <div class="input-material-group mb-1">
                                        <input asp-for="Password" type="password" class="input-material" style="font-size: medium;">
                                        <label class="label-material" for="login-password" style="font-size: large;">Contraseña</label>
                                    </div>
                                    <label class="labelvalidator" id="labelvalidatorPass"></label>
                                    <div>
                                        <button class="btn btn-primary mb-3 mt-3" id="login" type="submit">Ingresar</button><br>
                                        <a class="text-md text-paleBlue" href="@Url.Action("RecoverPassword","Access")" style="font-size: medium;">Recuperar contraseña</a><br>
                                        <small class="text-gray-500" style="font-size: medium;">no tiene una cuenta? </small>
                                        <a class="text-sm text-paleBlue" href="@Url.Action("Register","Access")">Registrese</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- JavaScript files-->
    <script src="../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/vendor/chart.js/Chart.min.js"></script>
    <script src="../assets/vendor/just-validate/js/just-validate.min.js"></script>
    <script src="../assets/vendor/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Main File-->
    <script src="../assets/js/front.js"></script>
    <script src="~/js/main.js"></script>
    @*<script>
            var validatorName = document.getElementById("labelvalidatorName");
            if (validatorName.innerHTML == 0) {
                validatorName.innerHTML = "Rellene este campo";
            } else {
                validatorName.innerHTML = " ";
            }
        </script>*@
    @{
        if (ViewData["LoginErrorEmail"] != null)
        {
            <script>
            var labelEmail = document.getElementById("labelvalidatorEmail");
            labelEmail.innerHTML = "@ViewData["LoginErrorEmail"]";
            </script>

        }
        else
        {
            <script>
                var labelEmail = document.getElementById("labelvalidatorEmail");
                labelEmail.innerHTML = "";
            </script>
        }

        if (ViewData["LoginError"] != null)
        {
            <script>
            var labelEmail = document.getElementById("labelvalidatorPass");
            labelEmail.innerHTML = "@ViewData["LoginError"]";
            </script>

        }
        else
        {
            <script>
                var labelEmail = document.getElementById("labelvalidatorPass");
                labelEmail.innerHTML = "";
            </script>
        }
    }
</body>
</html>