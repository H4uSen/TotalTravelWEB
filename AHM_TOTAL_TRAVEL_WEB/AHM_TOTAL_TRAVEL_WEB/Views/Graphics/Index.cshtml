@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
}

<header class="bg-white shadow-sm px-4 py-3 z-index-20">
    <div class="container-fluid px-0">
        <h2 class="mb-0 p-1">Gráficos del Administrador</h2>
    </div>
    <style>
        .highcharts-figure,
        .highcharts-data-table table {
            min-width: 320px;
            max-width: 660px;
            margin: 1em auto;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #ebebeb;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td,
        .highcharts-data-table th,
        .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr,
        .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }

        #a {
            text-decoration: none;
        }

        #carta {
            max-height: 300px !important;
        }
    </style>
</header>
<div class="container card mt-4">
    <div class="card mt-3">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <select id="dbbFiltro" class="form-select form-select-lg" aria-label="Filtro:" width: 500px;>
                    <option selected disabled>Seleccione un filtro:</option>
                    <option value="0">Filtrar por reservaciones</option>
                    <option value="1">Filtrar por sexo</option>
                    <option value="2">Filtrar por estado civil</option>
                    <!--<option value="3">Three</option>-->
                </select>
            </div>
        </div>
    </div>
    <section>
        <center>
        <div class="col-lg-9 col-12">
            <div class="card mb-0 h-100" id="c1">
                <div class="card-body" id="content1">
                    <div id="container"></div>
                </div>
                <center>
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-light" onclick="printDiv('#c1 .card-body')">
                            <span class="material-symbols-outlined">
                                Imprimir
                            </span>
                        </button>
                    </div>
                </center>
            </div>
        </div>
        </center>
    </section>
    <section class="">
        <div class="row align-items-stretch" style="padding-top: 20px">

            <!-- Line Chart -->
            <div class="col-lg-6 col-12">
                <div class="card mb-0" id="c2">
                    <div class="card-body" id="content2">
                        <div id="container2"></div>
                    </div>
                    <center>
                        <div class="col-md-6">
                            <button class="btn btn-light" onclick="printDiv('#c2 .card-body')">
                                <span class="material-symbols-outlined">
                                    Imprimir
                                </span>
                            </button>
                        </div>
                    </center>
                    <br />
                </div>
            </div>
            <div class="col-lg-6 col-12">
                <div class="card mb-0" id="c3">
                    <div class="card-body" id="content3">
                        <div id="container3"></div>
                    </div>
                    <center>
                        <div class="col-md-6">
                            <button class="btn btn-light" onclick="printDiv('#c3 .card-body')">
                                <span class="material-symbols-outlined">
                                    Imprimir
                                </span>
                            </button>
                        </div>
                    </center>
                    <br />
                </div>
            </div>
        </div>


    </section>

</div>

