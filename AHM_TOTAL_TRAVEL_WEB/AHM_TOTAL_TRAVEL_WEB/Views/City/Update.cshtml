@model AHM_TOTAL_TRAVEL_WEB.Models.CityListViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        .dotted_button {
            width: 100%;
            height: 6em;
            background: white;
            border: 3px solid #837c7c;
            border-style: dashed;
            font-size: 20px;
        }
    </style>
}

<div class="container card">
    <div class="ui basic segment">
        <div class="ui icon attached message">
            <i class="icon food"></i>
            <div class="content">
                <div class="header text-capitalize">
                    Actualizar Ciudad
                </div>
            </div>
            <div class="right floated content" style="text-align: end;">
                <a class="ui left labeled icon button" href="@Url.Action("Index", "City")">
                    Regresar
                    <i class="left arrow icon"></i>
                </a>
            </div>
        </div><br />

        <!-- formulario-->
        <form asp-action="Update" asp-controller="City" id="UpdateCityForm">
            <div class="ui form attached fluid">
                <div class="content">
                    <input id="Ciud_ID" name="Ciud_ID" value="@Model.ID" hidden />
                    <div class="field">
                        <div class="two fields">
                            <div class="required field">
                                <label>Nombre</label>
                                <input name="ciud_Descripcion" id="ciud_Descripcion" value="@Model.Ciudad" class="form-control" />
                            </div>
                            <div class="required field">
                                <label>Pais</label>
                                <select name="pais_ID" id="pais_ID" class="ui dropdown search" asp-items="ViewBag.CountriesList"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="btn btn-edit ui positive button" href="javascript: ActualizarCiudad()">Guardar</a>
                <a class="ui large icon button" href="javascript: history.back();">Cancelar</a>
            </div>
        </form>
        <!-- fin formulario-->

        <br />
        <h2 class="ui header">colonias</h2>
        <br />
        <div class="ui two columns stackabled grid">
            <div class="column overflow-auto" style="max-height:300px">
                <table class="ui compact selectable celled table" id="grdColonias">
                    <thead style="visibility:collapse">
                        <tr>
                            <th>Colonia</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="column">
                <button id="btnCrear" class="dotted_button">
                    <i class="plus icon"></i> Click para agregar una ciudad
                </button>
                <div class="ui form attached fluid segment">
                    <div class="content" id="form_content" data-action-target="">
                        <div class="required field">
                            <label>Nombre de la ciudad</label>
                            <input id="colonia" />
                        </div>
                        <br />
                        <a class="btn btn-edit ui positive button" href="#" id="btnGuardar">Guardar</a>
                        <a class="ui large icon button" id="btnCancelar">Cancelar</a>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <br />
    </div>
</div>

@section Scripts {
    <script>
        const Ciudad_Id = "@ViewData["City_ID"]";
    </script>
    <script src="~/js/CityJs/Update.js"></script>
}