@model AHM_TOTAL_TRAVEL_WEB.Models.RoomsListViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon building"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Actualizar Habitaciones
                    </div>
                </div>
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "Rooms")">
                        Regresar
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>

            <!-- formulario-->
            <form>

                <div class="ui form attached fluid segment">
                    <div class="content">

                        <div class="field">
                            <div class=" three  fields">

                                <div class="required field">
                                    <label class="ui label">Hotel</label>
                                    <select id="Hote_ID" class="ui dropdown search" asp-items="ViewBag.Hote_ID">
                                        <option value="">Seleccione un Hotel</option>
                                    </select>
                                </div>
                                <div class="required field">
                                    <label class="ui label">Habitacion</label>
                                    <input id="Habi_Nombre" value="@Model.Habitacion" placeholder="Habitacion" />
                                </div>
                                <div class="required field">
                                    <label class="ui label">Categoria</label>
                                    <select id="CaHa_ID" class="ui dropdown search" asp-items="ViewBag.CaHa_ID">
                                        <option value="">Seleccione una categoria </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="three fields">
                                <div class="required field">
                                    <label class="ui label">Capacidad</label>
                                    <input type="number" id="Habi_capacidad" value="@Model.Capacidad" placeholder="Capacidad" />
                                </div>
                                <div class="required field">
                                    <label class="ui label">Cama</label>
                                    <input type="number" id="Habi_camas" value="@Model.Camas" placeholder="Cama" />
                                </div>
                                <div class="required field">
                                    <div class="required field">
                                        <label class="ui label">Precio</label>
                                        <input id="Habi_Precio" value="@Model.Precio" placeholder="Precio" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="required field">
                                <label class="ui label">Descripcion</label>
                                <input id="Habi_Descripcion" value="@Model.Descripcion" placeholder="Descripcion" />
                            </div>
                        </div>

                        <div class="two fields">
                            <div class="ui toggle checkbox">
                                <input type="checkbox" id="Habi_balcon" value="@Model.Balcon" tabindex="0" class="hidden">
                                <label>Balcon</label>
                            </div>
                            <div class="required field">
                                <div class="ui toggle checkbox">
                                    <input type="checkbox" id="Habi_wifi" value="@Model.Wifi" tabindex="0" class="hidden">
                                    <label>Wifi</label>
                                </div>

                            </div>
                        </div>
                        <div class="ui grid three column stackable mt-4">

                            <div class="column">
                                <label class="ui label">Imagenes en fila.</label>
                                <div class="ui segment">
                                    <div class="ui middle aligned divided list" id="image-upload-list">

                                    </div>
                                </div>
                            </div>

                            <div class="column">
                                <div class="ui placeholder segment" style="cursor:pointer; opacity:inherit">
                                    <div class="ui icon header">
                                        <i class="pdf file outline icon"></i>
                                        Sube tus imagenes al sistema.
                                    </div>
                                    <input type="file" (change)="fileEvent($event)" class="inputfile"
                                           id="File" />
                                    <label for="File" class="ui primary button">
                                        Añade una imagen
                                    </label>
                                </div>

                            </div>

                            <div class="column">
                                <div class="ui placeholder segment" style="cursor:pointer; opacity:inherit">
                                    <div class="ui icon header" id="RoomsCarousel">
                                        <i class="images icon"></i>
                                        Tus imagenes aparecerán aquí.
                                    </div>

                                    <div class="fotorama" data-nav="thumbs" data-allowfullscreen="true" id="RoomsCarousel" data-auto="false">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <span class="labelvalidator" id="labelvalidatorError"></span>

                        <input type="button" value="Guardar" onclick="updateRooms()" class="btn btn-edit ui positive button" />
                        <a type="button" href="@Url.Action("Index", "Rooms")" class="ui button mb-3 ms-3">Cancelar</a>
                    </div>
                </div>



            </form>
            <!-- fin formulario-->
        </div>
    </div>
</div>
@section Scripts{

    <script>
        $('.ui.checkbox').checkbox();
    </script>
    <script>
         var UserID = '@ViewData["UserID"]';
        var RoomsFolder = '@ViewData["RoomsFolder"]';
        var ID_Update = '@ViewData["ID_Update"]';
    </script>
    <script>
        const roomsID = '@ViewData["RoomsID"]';
    </script>

    <script src="~/js/Rooms/Update.js"></script>

}
@section HighlightTile{

    <script>
        $("#HotelModule").addClass("active");
        $("#Hotel_Schema").addClass("show");
        $("#HotelModule").addClass("expandedList")
    </script>
}