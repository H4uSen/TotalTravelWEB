@model AHM_TOTAL_TRAVEL_WEB.Models.RoomsListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon building"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Detalles
                    </div>
                </div>
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "Rooms")">
                        Regresar
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>
            <div class="ui form attached fluid segment">
                <div class="content">
                    <div class="field">
                        <div class="three fields">
                            <div class="field">
                                <label>Habitación</label>
                                @Html.DisplayFor(model => model.Habitacion)
                            </div>
                            <div class="field">
                                <label>Descripción</label>
                                @Html.DisplayFor(model => model.Descripcion)
                            </div>
                            <div class="field">
                                <label>Categoría</label>
                                @Html.DisplayFor(model => model.Categoria)
                            </div>
                        </div>
                        <div class="three fields">

                            <div class="field">
                                <label>Hotel</label>
                                @Html.DisplayFor(model => model.Hotel)
                            </div>
                            <div class="field">
                                <label>Precio</label>
                                @Html.DisplayFor(model => model.Precio)
                            </div>
                            <div class="field">
                                <label>Balcon</label>
                                @{ if (Model.Balcon == 1)
                                    {
                                        <span>Si</span>
                                    }
                                    else
                                    {
                                        <span> No </span>
                                    }
                                }
                            </div>
                        </div>
                        <div class="three fields">
                            <div class="field">
                                <label>Wifi</label>
                                @{ if (Model.Wifi == true)
                                    {
                                        <span>Si</span>
                                    }
                                    else
                                    {
                                        <span> No </span>
                                    }
                                }
                            </div>
                            <div class="field">
                                <label>Camas</label>
                                @Html.DisplayFor(model => model.Camas)
                            </div>
                            <div class="field">
                                <label>Capacidad</label>
                                @Html.DisplayFor(model => model.Capacidad)
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="ui grid three column stackable mt-4">

                <div class="column">
                    <label class="ui label">Imagenes en fila.</label>
                    <div class="ui segment">
                        <div class="ui middle aligned divided list" id="image-upload-list">

                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="ui placeholder segment" style="cursor:pointer; opacity:inherit">
                        <div class="ui icon header" id="RoomsCarousel">
                            <i class="images icon"></i>
                            Tus imagenes aparecerán aquí.
                        </div>

                        <div class="fotorama" data-nav="thumbs" data-allowfullscreen="true" id="RoomsCarousel" data-auto="false">
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <br>

            <h3 class="ui horizontal divider header">
                <i class="folder open icon"></i>
                Auditoría
            </h3>

            <table class="ui compact selectable celled table" id="tabla">
                <thead>
                    <tr>
                        <th>
                            Usuario Creación
                        </th>
                        <th>
                            Fecha Creación
                        </th>
                        <th>
                            Usuario Modifica
                        </th>
                        <th>
                            Fecha Modifica
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.UsuarioCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FechaCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.UsuarioModifica)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FechaModifica)
                        </td>
                    </tr>
                </tbody>
            </table>
            <br>
        </div>
    </div>
</div>


@section Scripts{

    <script>
        var UserID = '@ViewData["UserID"]';
        var RoomsFolder = '@ViewData["RoomsFolder"]';
        var ID_Update = '@ViewData["ID_Update"]';
    </script>
    <script>
        const roomsID = '@ViewData["RoomsID"]';
    </script>

    <script src="~/js/Rooms/details.js"></script>
}


