@model AHM_TOTAL_TRAVEL_WEB.Models.ActivitiesExtrasViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="frmCreateActivityExtra">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon bicycle"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Crear Actividad Extra
                    </div>
                </div>
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "ActivitiesExtra")">
                        Regresar
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>

            <!-- formulario-->
            <form>

                <div class="ui form attached fluid segment">
                    <div class="content">

                        <div class="field">
                            <div class=" two fields">
                                <div class="required field">
                                    <label>Socio</label>
                                    <select id="Part_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                                        <option value="">Seleccione un partner</option>
                                    </select>
                                </div>
                                <div class="required field">
                                    <label>Actividad</label>
                                    <select id="Actv_ID" class="ui dropdown search" asp-items="ViewBag.Actv_ID">
                                        <option value="">Seleccione una actividad</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label>Precio</label>
                                    <input id="acEx_Precio" name="AcEx_Precio" placeholder="Precio" />
                                </div>
                                <div class="required field">
                                    <label>Descripcion</label>
                                    <input id="acEx_Descripcion" name="AcEx_Descripcion" placeholder="Descripcion de la Actividad Extra" />
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">País</label>
                                    <select id="Count_ID" class="ui dropdown search" asp-items="ViewBag.Count_ID">
                                        <option value="">Seleccione un pais</option>
                                    </select>
                                </div>
                                <div class="required field">
                                    <label class="ui label">Ciudad</label>
                                    <select id="City_ID" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Colonia</label>
                                    <select id="Col_ID" class="ui dropdown search"><option value="">Seleccione una colonia</option></select>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Calle</label>
                                    <input id="Calle" placeholder="Calle" />
                                </div>
                                <div class="required field">
                                    <label class="ui label">Avenida</label>
                                    <input id="Avenida" placeholder="Avenida" />
                                </div>
                            </div>
                        </div>

                        <div class="ui grid three column stackable mt-4">

                            <div class="column">
                                <label class="ui label">Imagenes en fila.</label>
                                <div class="ui segment">
                                    <div class="ui middle aligned divided list" id="image-upload-list">

                                    </div>
                                </div>
                            </div>

                            <div class="column">
                                <div class="ui placeholder segment" style="cursor:pointer; opacity:inherit">
                                    <div class="ui icon header">
                                        <i class="pdf file outline icon"></i>
                                        Sube tus imagenes al sistema.
                                    </div>
                                    <input type="file" (change)="fileEvent($event)" class="inputfile"
                                           id="File" />
                                    <label for="File" class="ui primary button">
                                        Añade una imagen
                                    </label>
                                </div>

                            </div>

                            <div class="column">
                                <div class="ui placeholder segment" style="cursor:pointer; opacity:inherit">
                                    <div class="ui icon header" id="ActivityExtraCarousel">
                                        <i class="images icon"></i>
                                        Tus imagenes aparecerán aquí.
                                    </div>

                                    <div class="fotorama" data-nav="thumbs" data-allowfullscreen="true" id="RestaurantCarousel" data-auto="false">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <span class="labelvalidator" id="labelvalidatorError"></span>

                        <input type="button" id="btnGuardarActvExtra" value="Guardar" class="btn btn-edit ui positive button" />
                    </div>
                </div>

            </form>
            <!-- fin formulario-->
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/ActivitiesExtraJs/Create.js"></script>

}

@section HighlightTile{
    <script>
        highlightTile();
    </script>
}