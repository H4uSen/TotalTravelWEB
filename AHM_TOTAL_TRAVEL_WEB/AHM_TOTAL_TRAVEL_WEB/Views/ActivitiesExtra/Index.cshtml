@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.ActivitiesExtrasListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="user icon"></i>
            <div class="content">
                <div class="header">
                    Actividades Extra
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid mb-3">
            <div class="eight wide column">
                <a class="ui small primary labeled icon btn-edit button" href="@Url.Action("Create","ActivitiesExtra")">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>
        <table id="grdActividadesExtra" class="display ui compact selectable celled table" style="width:100%;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Partner)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Actividad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Precio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th width="300px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Partner)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Actividad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>

                            <td>
                                <a href="@Url.Action("Update","ActivitiesExtra",new {  id=item.ID})" class="ui large icon btn-edit button"><i class="pencil alternate icon  icon-crud"></i></a>
                                @*<a href="@Url.Action("DeleteView","Activities",new {  id=item.ID})" class="ui large icon negative button"><i class="trash alternate icon"></i></a>*@
                                <button class="ui large icon btn-delete button" onclick="DeleteActiExtra('@item.ID')">
                                    <i class="trash alternate icon icon-crud"></i>
                                </button>
                                <a href="@Url.Action("Details","ActivitiesExtra",new {  id=item.ID})" class="ui large icon button">
                                    <i class="bi bi-info-circle fa-lg icon-crud"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br>

    </div>
</div>
<br>

@section Scripts{
    <script>
        // ----------------------------------- EVENTS ------------------------------------
        $(document).ready(function () {

            var table = $("#grdActividadesExtra").DataTable({
                stateSave: true,
                language: {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                },
                //Aqui se ingresa el numero de columnas que tiene la tabla
                columns: [
                    {},
                    {},
                    {},
                    {},
                    {},
                ],
                order: [[1, 'asc']],
                dom: 'Bfrtip',

                //Son los botones de acciones para exportar
                buttons: [
                    {
                        extend: 'pdfHtml5',
                        text: '<i class= "file pdf icon"></i> Exportar como PDF',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2",
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        text: '<i class="file excel icon"></i> Exportar a excel',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2",
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4]
                        }
                    },
                    {
                        extend: 'csvHtml5',
                        text: '<i class="file csv icon"></i> Exportar como CSV',
                        className: "btn-primary ui small btn-grey text-purple icon ui button mb-2"
                    },
                ]
            });
        });



        //------------------------------------Funciones------------------------

        function DeleteActiExtra(id) {
            const capsula13 = () => {
                var response = ajaxRequest("ActivitiesExtra/Delete?id=" + id, null, "POST");
                if (response > 0) {
                    window.location.href = '/ActivitiesExtra?success=true';
                }
            };
            sweetAlertconfirm("¿Seguro de eliminar este registro?", "Este registro se borrara permanentemente.", "warning", capsula13);

        };
    </script>
}

    @section HighlightTile{
    <script>

        $("#ActivitiesModule").addClass("active");
        $("#ActivitiesModule").addClass("expandedList");
        $("#ActivitiesModule").prop("aria-expanded");
        $("#ActivitiesModule").attr("aria-expanded", "true");

        $("#Activity_Schema").addClass("show");

        $("#ActivitiesExtraTile").addClass("activeTile");
    </script>
    }