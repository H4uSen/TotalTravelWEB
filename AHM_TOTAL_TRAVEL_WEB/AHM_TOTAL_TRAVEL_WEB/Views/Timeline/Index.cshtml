<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');


    .timeline {
        width: 800px;
        background-color: white;
        color: rgba(0,0,0,.5);
        padding: 30px 20px;
    }

        .timeline ul {
            list-style-type: none;
            border-left: 2px solid #094a68;
            padding: 10px 5px;
        }

            .timeline ul li {
                padding: 20px 20px;
                position: relative;
                cursor: pointer;
                transition: .5s;
            }

                .timeline ul li span {
                    display: inline-block;
                    background-color: #652D90;
                    border-radius: 25px;
                    padding: 2px 5px;
                    font-size: 15px;
                    text-align: center;
                    color: white;
                }

                .timeline ul li .content h3 {
                    color: #652D90;
                    font-size: 17px;
                    padding-top: 5px;
                }

                .timeline ul li .content p {
                    padding: 5px 0px 15px 0px;
                    font-size: 15px;
                }

                .timeline ul li:before {
                    position: absolute;
                    content: '';
                    width: 10px;
                    height: 10px;
                    background-color: #34ace0;
                    border-radius: 50%;
                    left: -11px;
                    top: 28px;
                    transition: .5s;
                }

                .timeline ul li:hover {
                    background-color: #e1e1e1;
                }

                    .timeline ul li:hover:before {
                        background-color: #0F0;
                        box-shadow: 0px 0px 10px 2px #0F0;
                    }

    .bt {
        background-color: #808080;
    }

    @@media (max-width:300px) {
        .timeline {
            width: 100%;
            padding: 30px 5px 30px 10px;
        }

            .timeline ul li .content h3 {
                color: #34ace0;
                font-size: 15px;
            }
    }
</style>
<br />
<br />
<div class="container">
    <div class="ui stackable grid">

        <!-- reservation historial section -->
        <div class="five wide column">
            <div class="ui segment" id="asa">

                <!-- top reservation filter menu -->


                <div class="ui cards overflow-auto" style="max-height: 55em;" id="reservacion">
                  
                </div>

            </div>
        </div>

        <div class="eleven wide column">
            <div class="ui segment">
                <div class="timeline">
                    <ul id="tarjetas">
                     
                    </ul>
                </div>


            </div>
        </div>
    </div>
</div>

