@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.HotelsMenuListViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon food"></i>
            <div class="content">
                <div class="header">
                    Hoteles Menu
                </div>

            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <button id="createHotelsMenu" class="ui small primary labeled icon btn-edit button"><i class="plus icon"></i>Nuevo</button>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Search..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>

        <table class="ui compact selectable celled table" id="tabla">
            <thead>
                <tr>
                    <th>
                        Hotel
                    </th>
                    <th>
                        Tipo
                    </th>
                    <th>
                        Menu
                    </th>
                    <th>
                        Precio
                    </th>
                    <th width="300px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hotel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Menu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>


                        <td>
                            <button class="ui large icon btn-edit button" id="UpdateBottomHotelsMenu" onclick="editar(@item.ID)">
                                <i class="pencil alternate icon icon-crud"></i>
                            </button>
                            <button class="ui large icon negative button" onclick="Deletehm(@item.ID)">
                                <i class="trash alternate icon icon-crud"></i>
                            </button>
                            <a href="@Url.Action("Details","HotelsMenu",new {  id=item.ID})" class="ui large icon button"><i class="bi bi-info-circle fa-lg icon-crud"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table><br>

    </div>
</div>
<div class="ui modal longer" id="modalCreate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa una Menu de hotel
    </div>
    <form asp-action="Create" asp-controller="HotelsMenu" id="createHotelsMenuForm">
        <div class="ui form attached fluid segment">
            <div class="content">
                <div class="required field">
                    
                    <div class="two fields">
                        <div class="field">
                            <input id="Descripcion" name="HoMe_Descripcion" placeholder="Descripcion del menu" />
                        </div>
                        <div class="field">
                            <input id="Precio" name="HoMe_Precio" placeholder="Precio del menu" />
                        </div>
                    </div>
                    <div class="two fields">
                        <div class="field">
                            <select id="tHoTe_ID" name="HoTe_ID" class="ui dropdown search" asp-items="ViewBag.Hote_ID">
                                <option value="">Seleccione el Hotel</option>
                            </select>
                        </div>
                        <div class="field">
                            <select id="tTime_ID" name="Time_ID" class="ui dropdown search" asp-items="ViewBag.Time_ID">
                                <option value="">Seleccione el Menu</option>
                            </select>
                        </div>


                    </div>
                    <div class="field">
                        <input id="file" type="file" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button" id="closeHotelsMenu">Cerrar</button>
        <button class="ui button" id="sendHotelsMenu" onclick="validar()">Guardar</button>
    </div>
</div>

<div class="ui modal" id="modalUpdate">
    <i class="close icon"></i>
    <div class="header">
        Actualiza un tipo de menú
    </div>
    <form asp-action="Update" asp-controller="HotelsMenu" id="updateHotelsMenuForm">
        <div class="ui form attached fluid segment">
            <div class="content">
                <input id="id" style="display:none" />
                <div class="two fields">
                    <div class="field">
                        <input id="Descripcion_up" name="HoMe_Descripcion" placeholder="Descripcion del menu" />
                    </div>
                    <div class="field">
                        <input id="Precio_up" name="HoMe_Precio" placeholder="Precio del menu" />
                    </div>
                </div>
                <div class="two fields">
                    <div class="field">
                        <select id="tHoTe_ID_up" name="HoTe_ID" class="ui dropdown search" asp-items="ViewBag.Hote_ID">
                            <option value="">Seleccione el Hotel</option>
                        </select>
                    </div>
                    <div class="field">
                        <select id="tTime_ID_up" name="Time_ID" class="ui dropdown search" asp-items="ViewBag.Time_ID">
                            <option value="">Seleccione el Menu</option>
                        </select>
                    </div>

                </div>
                <div class="field">
                    <input id="file_up" type="file" />
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button" id="closeEditHotelsMenu">Cerrar</button>
        <button class="ui button" id="sendEditHotelsMenu" onclick="actualizar()">Guardar</button>
    </div>
</div>

@section Scripts{
    <script src="~/js/HotelsMenu/Create.js"></script>
    <script src="~/js/HotelsMenu/Update.js"></script>
    <script>
        const params = new URLSearchParams(window.location.search);
        const izziSuccess = params.get("success");

        if (izziSuccess == "true") {
            iziToastAlert(title = "Proceso completado", message = "La acción se ha completado exitosamente.", type = "success");
        }
        // ----------------------------------- EVENTS ------------------------------------
        $("#txtSearch").keyup(function () {
            _this = this;
            $.each($("#tabla tbody tr"), function () {
                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) === -1) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });

            $("#tabla").paginationTdA({
                elemPerPage: 10
            });
        });

        $("#tabla").paginationTdA({
            elemPerPage: 10
        });

        //------------------------------------Funciones------------------------

        function Deletehm(id) {
            const capsulahm = () => {
                ajaxRequest("/HotelsMenu/Delete?id=" + id, null, "POST")
                window.location.href = '/HotelsMenu?success=true';
                
            };

            sweetAlertconfirm("Estas Seguro de Eliminar el Registro Seleccionado?", "Este registro se borrara permanentemente", "warning", capsulahm);

        };
    </script>
}
    @section HighlightTile{
    <script>

        $("#HotelModule").addClass("active");
        $("#HotelModule").addClass("expandedList");
        $("#HotelModule").prop("aria-expanded");
        $("#HotelModule").attr("aria-expanded", "true");

        $("#Hotels_Schema").addClass("show");

        $("#HotelsMenuTile").addClass("activeTile");
    </script>
    }