@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.TypeMenusListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon food"></i>
            <div class="content">
                <div class="header">
                    Tipo menús
                </div>
                <p>Crea, actualiza, elimina o busca y filtra .</p>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <button id="createTypeMenus" class="ui small primary labeled icon button"><i class="user icon"></i>Nuevo</button>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Buscar..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>

        <table class="ui compact selectable celled table" id="grdTypeMenus">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.descripcion)
                    </th>

                    <th width="300px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td>
                            <button class="ui large icon positive button">
                                <i class="pencil alternate icon"></i>
                            </button>
                            <button class="ui large icon negative button">
                                <i class="trash alternate icon"></i>
                            </button>
                            <button class="ui large icon yellow button">
                                <i class="folder open outline icon"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br>

    </div>
</div>
<br>

<div class="ui modal" id="modalCreate">
    <i class="close icon"></i>
    <div class="header">
        Ingresa un tipo de menú
    </div>
    <form asp-action="Create" asp-controller="TypeMenus" id="createTypeMenusForm">
        <div class="ui form attached fluid segment">
            <div class="content">

                <div class="field">
                    <div class="form-group">
                        <label class="control-label">Descripción</label>
                        <input name="Time_Descripcion" id="Time_Descripcion" class="form-control" />
                    </div>
                    <label style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorError"></label>
                </div>
            </div>
        </div>
    </form>
    <div class="actions">
        <button class="ui button" id="closeTypeMenus">Cerrar</button>
        <button class="ui button" id="sendTypeMenus">Guardar</button>
    </div>
</div>



@section Scripts{
    <script src="~/js/TypeMenusJs/Create.js"></script>
}
