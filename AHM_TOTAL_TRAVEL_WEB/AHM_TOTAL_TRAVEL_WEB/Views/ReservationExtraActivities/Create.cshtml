@model AHM_TOTAL_TRAVEL_WEB.Models.ReservationExtraActivitiesViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="frmCreateReservation">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon user-select-all"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Crear
                    </div>
                    <p>Ingresa un nuevo partner.</p>
                </div>
            </div>

            <!-- formulario-->
            <form>

                <div class="ui form attached fluid segment">
                    <div class="content">

                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Reservacion</label>
                                    <select id="Resv_ID" class="ui dropdown search" asp-items="ViewBag.Resv_ID">
                                        <option value="">Seleccione un partner</option>
                                    </select>
                                </div>
                                <div class="required field">
                                    <label>Cantidad</label>
                                    <input id="ReAE_Cantidad" placeholder="Cantidad" />
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorReAE_Cantidad"></span>
                                </div>
                                

                            </div>
                        </div>

                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label class="ui label">Reservacion</label>
                                    <select id="AcEx_ID" class="ui dropdown search" asp-items="ViewBag.AcEx_ID">
                                        <option value="">Seleccione un partner</option>
                                    </select>
                                </div>
                                <div class="required field">
                                    <label>Fecha Reservacion</label>
                                    <input id="ReAE_FechaReservacion" placeholder="Fecha Reservacion" type="date" />
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorReAE_FechaReservacion"></span>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <div class="required field">
                                <label>Hora Reservacion</label>
                                <input id="ReAE_HoraReservacion" placeholder="Hora Reservacion" />
                                <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorReAE_HoraReservacion"></span>
                            </div>

                        </div>


                        <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorError"></span>

                        <input type="button" value="Crear" onclick="createreservationactividadesextra()" class="btn btn-purple ui positive button" />
                    </div>
                </div>

            </form>
            <!-- fin formulario-->
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/ReservationJS/CreateReservacionActividadesExtras.js"></script>
}

@section HighlightTile{
    <script>
        $("#ReservationModule").addClass("active");
        $("#Reservation_Schema").addClass("show");
        $("#ReservationModule").addClass("expandedList")
    </script>
}
