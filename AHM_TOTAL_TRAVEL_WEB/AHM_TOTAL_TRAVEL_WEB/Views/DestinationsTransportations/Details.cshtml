@model AHM_TOTAL_TRAVEL_WEB.Models.DestinationsTransportationsListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="map marker alternate icon"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Detalles de un Destino Transporte
                    </div>
                </div>
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "DestinationsTransportations")">
                        Regresar
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>
            <div class="ui form attached fluid segment">
                <div class="content">
                    <div class="field">
                        <div class="two fields">
                            <div class="field">
                                <label>Ciudad de Salida</label>
                                @Html.DisplayFor(model => model.CiudadSalida)

                            </div>
                            <div class="field">
                                <label>Ciudad de Destino</label>
                                @Html.DisplayFor(model => model.CiudadDestino)
                            </div>
                        </div>
                        <div class="two fields">
                            <div class="field">
                                <label>Partner</label>
                                @Html.DisplayFor(model => model.Partner_Nombre)

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <br />

            <h3 class="ui horizontal divider header">
                <i class="folder open icon"></i>
                Auditoría
            </h3>

            <table class="ui compact selectable celled table" id="tabla">
                <thead>
                    <tr>
                        <th>
                            Usuario Creación
                        </th>
                        <th>
                            Fecha Creación
                        </th>
                        <th>
                            Usuario Modifica
                        </th>
                        <th>
                            Fecha Modifica
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.UsuarioCreacionID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FechaCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.UsuarioModificaID)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FechaModifica)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section HighlightTile{
    <script>
        highlightTile();
    </script>
}
