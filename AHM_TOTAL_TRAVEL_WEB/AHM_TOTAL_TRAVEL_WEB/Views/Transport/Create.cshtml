@model AHM_TOTAL_TRAVEL_WEB.Models.TransportViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TransportViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Partner</label>
                <select id="Part_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                    <option value="">Seleccione un partner</option>
                </select>
            </div>
            <div class="form-group">
                <label>Tipo transporte</label>
                <select id="TiTr_ID" class="ui dropdown search" asp-items="ViewBag.TiTr_ID">
                    <option value="">Seleccione un tipo de transporte</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Dire_ID" class="control-label"></label>
                <input asp-for="Dire_ID" class="form-control" />
            </div>
            <div>
                <label>País</label>
                <select id="Count_ID" class="ui dropdown search" asp-items="ViewBag.Count_ID"></select>
            </div>
            <div class="form-group">
                <label>Ciudad</label>
                <select id="City_ID" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script src="~/js/TransportJs/Create.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}