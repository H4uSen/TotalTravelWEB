@model AHM_TOTAL_TRAVEL_WEB.Models.TransportViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="frmCreateUser">
    <div class="container card">
        <div class="ui basic segment">
            <div class="ui icon attached message">
                <i class="icon bus"></i>
                <div class="content">
                    <div class="header text-capitalize">
                        Crear Transporte
                    </div>
                </div>
                <div class="right floated content" style="text-align: end;">
                    <a class="ui left labeled icon button" href="@Url.Action("Index", "Transport")">
                        Regresar
                        <i class="left arrow icon"></i>
                    </a>
                </div>
            </div>

            <form>
                <div class="ui form attached fluid segment">
                    <div class="content">

                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label>Partner</label>
                                    <select id="Part_ID" class="ui dropdown search" asp-items="ViewBag.Part_ID">
                                        <option value="">Seleccione un partner</option>
                                    </select>
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorPartner"></span>
                                </div>
                                <div class="required field">
                                    <label>Tipo transporte</label>
                                    <select id="TiTr_ID" class="ui dropdown search" asp-items="ViewBag.TiTr_ID">
                                        <option value="">Seleccione un tipo de transporte</option>
                                    </select>
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorTipoTransporte"></span>
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label>País</label>
                                    <select id="Count_ID" class="ui dropdown search" asp-items="ViewBag.Count_ID">
                                        <option value="">Seleccione un país</option>
                                    </select>
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorPais"></span>
                                </div>
                                <div class="required field">
                                    <label>Ciudad</label>
                                    <select id="City_ID" class="ui dropdown search"><option value="">Seleccione una ciudad</option></select>
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCiudad"></span>
                                </div>
                            </div>
                        </div>

                        <div class="required field">
                            <label>Colonia</label>
                            <input id="Colonia" placeholder="Colonia" />
                            <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCol"></span>
                        </div>

                        <div class="field">
                            <div class="two fields">
                                <div class="required field">
                                    <label>Calle</label>
                                    <input id="Calle" placeholder="Calle" />
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorCalle"></span>
                                </div>
                                <div class="required field">
                                    <label>Avenida</label>
                                    <input id="Avenida" placeholder="Avenida" />
                                    <span style="color: darkred; font-size: 16px;" class="labelvalidator" id="labelvalidatorAve"></span>
                                </div>
                            </div>
                        </div>
                        <input type="button" value="Guardar" onclick="createTransport()" class="ui small btn-purple text-white labeled button" />
                    </div>
                </div>
                <div class="ui negative message bottom attached" id="errorDiv">
                    <div class="header">
                        Ha ocurrido un error al realizar la operación.
                    </div>
                    <p>

                    </p>
                </div>
            </form>
            <!-- fin formulario-->
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/js/TransportJs/Create.js"></script>
    <script src="~/js/TransportJs/SelectCiudades.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}