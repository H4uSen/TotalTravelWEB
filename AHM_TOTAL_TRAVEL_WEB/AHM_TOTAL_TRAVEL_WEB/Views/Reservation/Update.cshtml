@model AHM_TOTAL_TRAVEL_WEB.Models.ReservationListViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section CSS{
    <style>
        .dotted_button {
            width: 100%;
            height: 6em;
            background: white;
            border: 3px solid #837c7c;
            border-style: dashed;
            font-size: 20px;
        }
    </style>
}

<div class="container card">
    <div class="ui basic segment">
        <div class="ui icon attached message">
            <i class="icon food"></i>
            <div class="content">
                <div class="header text-capitalize">
                    Actualizar Reservación
                </div>
            </div>
            <div class="right floated content" style="text-align: end;">
                <a class="ui left labeled icon button" href="@Url.Action("Index", "Reservation")">
                    Regresar
                    <i class="left arrow icon"></i>
                </a>
            </div>
        </div><br />

        <!-- formulario-->
        <form asp-action="Update" asp-controller="Reservation" id="updateReservationForm">
            <div class="ui form attached fluid">
                <div class="content">
                    <input id="Resv_ID" name="Resv_ID" value="@Model.ID" hidden />
                    <div class="required field">
                        <div class="two fields">
                            <div class="required field">
                                <label>Cliente</label>
                                <select name="Usua_ID" id="Usua_ID" asp-items="ViewBag.Cliente" class="ui dropdown search">
                                </select>
                            </div>
                            <div class="required field">
                                <label>Precio</label>
                                <input name="Resv_Precio" id="Resv_Precio" value="@Convert.ToDouble(Model.precio)" type="number" />
                            </div>
                        </div>
                    </div>
                    <div class="required field">
                        <label>Paquete</label>
                        <select name="Paqu_ID" id="Paqu_ID" asp-items="ViewBag.Paquetes" class="ui dropdown search">
                            <option value="">
                                Seleccione un paquete
                            </option>
                        </select>
                    </div>
                </div>
                <a class="btn btn-edit ui positive button" href="javascript: ActualizarReservacion()">Guardar</a>
                <a class="ui large icon button" href="@Url.Action("Index", "Reservation")">Cancelar</a>
            </div>
        </form>
        <!-- fin formulario-->

        <br />
        <h2 class="ui header">Detalles</h2>
        <br />
        <div class="ui two columns stackabled grid">
            <div class="column overflow-auto" style="max-height:300px">
                <table class="ui compact selectable celled table" id="grdReservacionDetalles">
                    <thead style="visibility:collapse">
                        <tr>
                            <th>Detalles</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="column">
                <button id="btnCrear" class="dotted_button">
                    <i class="plus icon"></i> Click para agregar un nuevo detalle
                </button>
                <div class="ui form attached fluid segment">
                    <div class="content" id="form_content" data-action-target="">
                        <div class="required field">
                            <label>Seleccione una habitación</label>
                            <select id="Habi_ID" asp-items="ViewBag.Habitaciones" class="ui dropdown search">
                                <option value="">
                                    Seleccione una habitación
                                </option>
                            </select>
                        </div>
                        <br />
                        <a class="btn btn-edit ui positive button" href="#" id="btnGuardar">Guardar</a>
                        <a class="ui large icon button" id="btnCancelar">Cancelar</a>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <br />
    </div>
</div>

@section Scripts {
    <script>
        const Reservacion_HotelID = "@ViewData["Reservacion_HotelID"]";
        const Hotel_ID = "@ViewData["Hotel_ID"]";
        const Paquete_ID = "@Model.Id_Paquete";
    </script>
    <script src="~/js/ReservationJs/Update.js"></script>
}