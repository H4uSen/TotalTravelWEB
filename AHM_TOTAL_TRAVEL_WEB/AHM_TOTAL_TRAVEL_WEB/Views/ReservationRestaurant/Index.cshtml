@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.ReservationRestaurantsListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="user icon"></i>
            <div class="content">
                <div class="header">
                    Restaurantes
                </div>
                <p>Create, Update, Delete or Search and Filter Users.</p>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <a class="ui small primary labeled icon button" href="@Url.Action("Create","ReservationRestaurant")">
                    <i class="user icon"></i> Nuevo
                </a>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Search..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>

        <table class="ui compact selectable celled table" id="grdReservationRestaurants">

            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Numero_Reservacacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Restaurante)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha_Reservacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hora_Reservacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario_Creacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha_Creacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario_Modifica)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha_Modifica)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Numero_Reservacacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Restaurante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Reservacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hora_Reservacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario_Creacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Creacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario_Modifica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Modifica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>

                        <td>
                            <a href="@Url.Action("Update","Activities",new {  id=item.Id})" class="ui large icon positive button"><i class="pencil alternate icon"></i></a>
                            @*<i class='pencil alternate icon'></i>@Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "ui large icon positive button" })*@
                            <button class="ui large icon negative button">
                                <i class="trash alternate icon"></i>
                            </button>
                            <button class="ui large icon yellow button">
                                <i class="folder open outline icon"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br>
    </div>
</div>
<br>


<div class="ui modal" id="modalCreate">   

    <i class="close icon">
        <div class="header">
            ingrese una reservacion de restaurante
        </div>>
        <form asp-action="Create" id="createrestauranreservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label  class="control-label"></label>
                <input id="Resv_ID" class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <input id="Rest_ID" class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <input id="ReRe_FechaReservacion" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input id="ReRe_HoraReservacion" class="form-control" />
            </div>
        </form>>

</div>>

@section Scripts{
    <script>
                // ----------------------------------- EVENTS ------------------------------------
        $("#txtSearch").keyup(function () {
            _this = this;
            $.each($("#grdReservationRestaurants tbody tr"), function () {
                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) === -1) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });

            $("#grdReservationRestaurants").paginationTdA({
                elemPerPage: 5
            });
        });

        $("#grdReservationRestaurants").paginationTdA({
            elemPerPage: 5
        });
    </script>
}
