@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.ReservationRestaurantsListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container card">
    <div class="ui basic segment">

        <div class="ui icon attached message">
            <i class="icon food"></i>
            <div class="content">
                <div class="header">
                    Restaurantes
                </div>
            </div>
        </div>

        <br>
        <div class="ui grid">
            <div class="eight wide column">
                <a class="ui small btn-purple text-white labeled icon button" href="@Url.Action("Create","ReservationRestaurant")">
                    <i class="plus icon"></i> Nuevo
                </a>
            </div>
            <div class="eight wide column">
                <div class="ui icon input" style="float:right;">
                    <input type="text" placeholder="Search..." id="txtSearch">
                    <i class="search icon"></i>
                </div>
            </div>
        </div>
        <style>
            table thead tr th {
                background-color: #2b2b2b;
                color: white;
            }
        </style>

        <table class="ui compact selectable celled table" id="grdReservationRestaurants">

            <thead>
                <tr>

                    <th>
                        Numero Reservacion
                    </th>
                    <th>
                        Restaurante
                    </th>
                    <th>
                        Fecha Reservacion
                    </th>
                    <th>
                        Hora Reservacion
                    </th>
                    <th width="200px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Numero_Reservacacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Restaurante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha_Reservacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hora_Reservacion)
                        </td>
                       

                        <td>
                            <a href="@Url.Action("Update","Activities",new {  id=item.Id})" class="ui large icon btn-edit button">
                                <i class="pencil alternate icon  icon-crud"></i>
                            </a>
                            <button class="ui large icon btn-delete button" onclick="DeleteRestaurant('@item.Id')">
                                <i class="trash alternate icon icon-crud"></i>
                            </button>
                            <a href="@Url.Action("Details","Activities",new {  id=item.Id})" class="ui large icon button">
                                <i class="bi bi-info-circle fa-lg icon-crud"></i>
                            </a>

                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br>
    </div>
</div>
<br>


<div class="ui modal" id="modalCreate">   

    <i class="close icon">
        <div class="header">
            ingrese una reservacion de restaurante
        </div>>
        <form asp-action="Create" id="createrestauranreservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label  class="control-label"></label>
                <input id="Resv_ID" class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <input id="Rest_ID" class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <input id="ReRe_FechaReservacion" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input id="ReRe_HoraReservacion" class="form-control" />
            </div>
        </form>>

</div>>

@section Scripts{
    <script>
                // ----------------------------------- EVENTS ------------------------------------
        $("#txtSearch").keyup(function () {
            _this = this;
            $.each($("#grdReservationRestaurants tbody tr"), function () {
                if ($(this).text().toLowerCase().indexOf($(_this).val().toLowerCase()) === -1) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });

            $("#grdReservationRestaurants").paginationTdA({
                elemPerPage: 10
            });
        });

        $("#grdReservationRestaurants").paginationTdA({
            elemPerPage: 10
        });
    </script>
}
