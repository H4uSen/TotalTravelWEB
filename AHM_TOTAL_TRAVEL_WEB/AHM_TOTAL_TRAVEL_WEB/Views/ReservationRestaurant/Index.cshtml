@model IEnumerable<AHM_TOTAL_TRAVEL_WEB.Models.ReservationRestaurantsListViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@try
{
    <div class="container card">
        <div class="ui basic segment">

            <div class="ui icon attached message">
                <i class="icon food"></i>
                <div class="content">
                    <div class="header">
                        Reservacion Restaurantes
                    </div>
                </div>
            </div>

            <br>
            <div class="ui grid mb-3">
                <div class="eight wide column">
                    <a class="ui small btn-edit text-white labeled icon button" href="@Url.Action("Create","ReservationRestaurant")">
                        <i class="plus icon"></i> Nuevo
                    </a>
                </div>
            </div>
            <style>
                table thead tr th {
                    background-color: #2b2b2b;
                    color: white;
                }
            </style>
            <table id="grdReservationRestaurants" class="display ui compact selectable celled table" style="width:100%;">

                <thead>
                    <tr>

                        <th>
                            Cliente
                        </th>
                        <th>
                            Restaurante
                        </th>
                        <th>
                            Fecha Reservacion
                        </th>
                        <th>
                            Hora Reservacion
                        </th>
                        <th width="200px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Restaurante)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha_Reservacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Hora_Reservacion)
                            </td>


                            <td>
                                <a href="@Url.Action("Update","ReservationRestaurant",new {  id=item.Id})" class="ui large icon btn-edit button">
                                    <i class="pencil alternate icon  icon-crud"></i>
                                </a>
                                <button class="ui large icon btn-delete button" onclick="DeleteReservacionRestaurante('@item.Id')">
                                    <i class="trash alternate icon icon-crud"></i>
                                </button>
                                <a href="@Url.Action("Details","ReservationRestaurant",new {  id=item.Id})" class="ui large icon button">
                                    <i class="bi bi-info-circle fa-lg icon-crud"></i>
                                </a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br>
        </div>
    </div>
    <br>
}
catch (Exception)
{
    <script>location.assign("@Url.Action("Error", "Home")");</script>
}


@section Scripts{

    <script src="~/js/ReservationRestauranteJS/Delete.js"></script>

    <script>

        const success = FindGetValue("success");

        if (success) {
            iziToastAlert("Proceso completado", "La acción se ha completado exitosamente.", "success")
        }

    </script>

}

@section HighlightTile{
    <script>

        $("#ReservationModule").addClass("active");
        $("#ReservationModule").addClass("expandedList");
        $("#ReservationModule").prop("aria-expanded");
        $("#ReservationModule").attr("aria-expanded", "true");

        $("#Reservation_Schema").addClass("show");

        $("#ReservationRestaurantTile").addClass("activeTile");
    </script>
}
