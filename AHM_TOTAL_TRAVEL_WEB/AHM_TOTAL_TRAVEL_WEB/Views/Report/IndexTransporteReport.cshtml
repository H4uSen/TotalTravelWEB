
@{
    ViewData["Title"] = "IndexTransporteReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>
@try
{
    <div id="frmTransportReports" class="container ui segment">
        <div class="ui floating dropdown labeled search icon button" id="cbbtransporte">
            <i class="filter icon"></i>
            <span class="text">Filtrar por ciudad</span>
            <div class="menu">
                <div class="header">
                    <i class="tags icon"></i> Filter by tag
                </div>
                <div class="item" data-value="0">Todos</div>

                @foreach (TransportListViewModel item in ViewBag.Transporte)
                {
                    <div class="item" data-value="@item.ID">@item.Nombre</div>
                }
            </div>
        </div>

        <div class="ui floating dropdown labeled search icon button" id="cbbTipotransporte">
            <i class="filter icon"></i>
            <span class="text">Filtrar por tipo transporte</span>
            <div class="menu">
                <div class="header">
                    <i class="tags icon"></i> Filter by tag
                </div>
                <div class="item" data-value="0">Todos</div>

                @foreach (TypesTransportListViewModel item in ViewBag.Tipotransporte)
                {
                    <div class="item" data-value="@item.ID">@item.Trasporte</div>
                }
            </div>
        </div>

        <div class="ui floating dropdown labeled search icon button" id="cbbPartners">
            <i class="filter icon"></i>
            <span class="text">Filtrar por partner</span>
            <div class="menu">
                <div class="header">
                    <i class="tags icon"></i> Filter by tag
                </div>
                <div class="item" data-value="0">Todos</div>

                @foreach (PartnersListViewModel item in ViewBag.Socios)
                {
                    <div class="item" data-value="@item.ID">@item.Nombre</div>
                }
            </div>
        </div>

        <button class="ui positive button" onclick="REPORTS_FUNCTIONS.getReport_transport(true)">FILTRAR REPORTE</button>
        <button class="ui positive button" onclick="REPORTS_FUNCTIONS.getReport_transport(false)">TRAER TODOS</button>
        <a href="@Url.Action("TransportReportXLS", "Report", new ReportCreationModel{DataSourceIndex= 2, HTMLFile = "TransportReportXLS"} )" class="ui button icon">Excel <i class="file excel icon"></i> </a>

        <div class="ui segment">
            <iframe id="ifrReport" src="" frameborder="0" width="100%" height="680px"></iframe>
        </div>
    </div>
}
catch (Exception)
{
    <script>location.assign("@Url.Action("Error", "Home")");</script>
}
@section Scripts{

    <script>
        $(".ui.dropdown").dropdown();
    </script>

    <script>
        const REPORTS_FUNCTIONS = {
            getReport_transport: function (parameter = false) {
                var query = {
                    parameters: {},
                    user_name: Client_User_Name
                };
                if (parameter) {
                    if ($("#cbbtransporte .item.selected").length > 0 && $("#cbbtransporte .item.selected").attr("data-value") != 0) {
                        var id_transporte = $("#cbbtransporte .item.selected").attr("data-value");
                        query.parameters.id_transporte = parseInt(id_transporte);
                    }
                    else {

                        delete query.parameters["id_Transporte"];
                    }
                    if ($("#cbbTipotransporte .item.selected").length > 0 && $("#cbbTipotransporte .item.selected").attr("data-value") != 0) {
                        var id_tipotransporte = $("#cbbTipotransporte .item.selected").attr("data-value");
                        query.parameters.id_tipotransporte = parseInt(id_tipotransporte);
                    }
                    else {

                        delete query.parameters["id_tipotransporte"];
                    }
                    if ($("#cbbPartners .item.selected").length > 0 && $("#cbbPartners .item.selected").attr("data-value") != 0) {
                        var id_socios = $("#cbbPartners .item.selected").attr("data-value");
                        query.parameters.iD_Partner = parseInt(id_socios);
                    }
                    else {

                        delete query.parameters["iD_Partner"];
                    }
                   
                }
                $('#frmTransportReports #ifrReport').attr('src', `https://totaltravelfileservices.yourgreatbusinesscenter.com/PDFs/Transport_report_pdf.php?query=${JSON.stringify(query)}`);
            },
        }
        REPORTS_FUNCTIONS.getReport_transport(false);
    </script>
}
