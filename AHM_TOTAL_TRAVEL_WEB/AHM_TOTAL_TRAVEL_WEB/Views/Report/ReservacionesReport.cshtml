
@{
    ViewData["Title"] = "ReservacionesReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reporte Reservaciones</h1>

<div class="container-fluid">
    <div class="row">

        <!-- inicio columna contenedora -->
        <div class="col-12">
            <br>

            <div class="ui segment form">
                <div class="fields two">
                    <div class="field">
                        <label>Escoge un filtro</label>
                        <select class="ui dropdown search" id="cbbFiltro">
                        </select>
                    </div>
                    <div class="field">
                        <label>Seleccione una opción</label>
                        <select class="ui dropdown search" id="cbbValor">
                            <option value="">Seleccione una opción</option>
                        </select>
                    </div>
                    <div class="field">
                        <label>Seleccione una opción</label>
                            <div class="ui calendar" id="standard_calendar">
                                <div class="ui input action">
                                    <input id="txtValor" type="text" placeholder="Fecha">
                                    <button class="ui button" id="filtrar">Filtrar</button>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            <br><br>

            <div class="card">
                <div class="card card-body">

                    <iframe src="@Url.Action("ReservacionesReportPDF", "Report")" frameborder="0" height="500" id="ifrReport"></iframe>

                </div>
            </div>
        </div>
        <!-- fin columna contenedora -->

    </div>
</div>


@section HighlightTile{
    <script>

        $("#ReportModule").addClass("active");
        $("#ReportModule").addClass("expandedList");
        $("#ReportModule").prop("aria-expanded");
        $("#ReportModule").attr("aria-expanded", "true");

        $("#Report_Schema").addClass("show");

        $("#ReservationReportTile").addClass("activeTile");
    </script>
}


@section Scripts{

    <script>
        const action = "ReservacionesReportPDF";
    </script>

    <script src="~/js/Reports/ReservationReports.js"></script>
}
